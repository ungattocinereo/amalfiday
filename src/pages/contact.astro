---
import BaseLayout from '../layouts/BaseLayout.astro'
---

<BaseLayout title="Contact — Amalfi.Day">
  <section class="section">
    <div class="container contact">
      <div class="contact__intro">
        <h1>
          Let’s plan your <span class="accent-italic">Amalfi</span> session
        </h1>
        <p>
          Tell me about your dates, vibe, and the experience you want. I’ll reply with a
          custom plan and the best locations.
        </p>
        <div class="contact__note">
          <strong>Direct line:</strong> hello@amalfi.day
        </div>
      </div>

      <form class="contact__form" method="post" action="/api/contact">
        <label>
          Your name
          <input type="text" name="name" placeholder="Iana" required />
        </label>
        <label>
          Email or WhatsApp
          <input type="text" name="contact" placeholder="email or +39" required />
        </label>
        <label>
          Dates & location
          <input type="text" name="dates" placeholder="Oct 3–7, Atrani" />
        </label>
        <label>
          Your message
          <textarea name="message" rows="5" placeholder="Tell me about your shoot" required></textarea>
        </label>
        <button class="button" type="submit">Send request</button>
        <p class="form__status" aria-live="polite"></p>
      </form>
    </div>
  </section>

  <script>
    const form = document.querySelector('.contact__form')
    const status = document.querySelector('.form__status')

    form?.addEventListener('submit', async (event) => {
      event.preventDefault()
      status.textContent = 'Sending...'
      const formData = new FormData(form)
      const response = await fetch('/api/contact', {
        method: 'POST',
        body: formData,
      })

      if (response.ok) {
        form.reset()
        status.textContent = 'Sent! I will get back to you shortly.'
      } else {
        status.textContent = 'Something went wrong. Please email hello@amalfi.day.'
      }
    })
  </script>
</BaseLayout>

<style>
  .contact {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
  }

  h1 {
    font-size: clamp(2.5rem, 4vw, 3.8rem);
  }

  .contact__note {
    margin-top: 2rem;
    padding: 1rem 1.2rem;
    background: var(--color-surface);
    border-radius: var(--radius-md);
  }

  .contact__form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 2rem;
    border-radius: var(--radius-lg);
    background: var(--color-card);
    box-shadow: var(--shadow-soft);
  }

  label {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    font-weight: 500;
    color: var(--color-text);
  }

  input,
  textarea {
    border: 1px solid var(--color-border);
    border-radius: 12px;
    padding: 0.8rem 1rem;
    font-family: var(--font-body);
    background: var(--color-bg);
    color: var(--color-text);
  }

  input:focus,
  textarea:focus {
    outline: 2px solid rgba(1, 98, 255, 0.2);
    border-color: var(--color-aux);
  }

  .form__status {
    margin: 0.2rem 0 0;
    color: var(--color-text-muted);
  }

  @media (max-width: 900px) {
    .contact {
      grid-template-columns: 1fr;
    }
  }
</style>
