---
import BaseLayout from '../layouts/BaseLayout.astro'

const heroImages = [
  '/photoshootings/hero/influencer/3-berra-influenser-slider-slider.jpg',
  '/photoshootings/hero/couple/02-slideshow-regan-walk-ravello-love-1024x682.webp',
  '/photoshootings/hero/personal/iiana-photo-hero-atrani-hat-2-1024x680.webp',
]

const photoshootings = [
  {
    title: "Ayuna's Photographic Memoir",
    location: 'Atrani · 2023',
    image: '/photoshootings/ayuna/39-Ayuna-Atrani-2023.webp',
    href: '/photoshootings/ayuna',
  },
  {
    title: 'Camelia Moto Story',
    location: 'Amalfi Coast',
    image: '/photoshootings/camelia/4-camelia-photoshooting-moto.webp',
    href: '/photoshootings/camelia',
  },
  {
    title: 'Olga & Marat in Atrani',
    location: 'Atrani · 2023',
    image: '/photoshootings/olga-marat/28-olga-marat-atrani-2023.webp',
    href: '/photoshootings/olga-marat',
  },
  {
    title: 'Ravello Light Elegance',
    location: 'Ravello · 2024',
    image: '/photoshootings/ravello-photoshooting/hero-Photoshooting-ravello-top-page-001.webp',
    href: '/photoshootings/ravello-photoshooting',
  },
]

const pageTitle = 'Experiences — CristallPont Amalfi Day'
const pageDescription =
  'Bespoke Amalfi Coast experiences: photo shoots, scenic rides, and curated local tastings hosted by a true local.'
const shareImageAlt = 'Amalfi Coast experience hero'
const shareImage = heroImages[0]

const experienceCards = [
  {
    title: 'Mountain Drive & Wine Table Escape',
    text:
      'Ride the mountain road in a private car, stop for sweeping viewpoints, then linger over a slow wine tasting and local lunch. Scenic, unhurried, unforgettable.',
  },
  {
    title: 'A Photographic Motorcycle Adventure',
    text:
      'Discover the coast on a private motorbike tour with a storyteller-guide. We trace cliffside roads, pause at cinematic overlooks, and capture candid moments in motion.',
  },
  {
    title: 'Amalfi Unfiltered. Framing the Beauty',
    text:
      'A one-of-a-kind photo session led by a fashion‑magazine graphic designer. Expect editorial direction, bold composition, and light curated to the minute.',
  },
]

const experienceTags = [
  'Photo sessions',
  'Private tours',
  'Wine tastings',
  'Motorbike adventures',
  'Village routes',
  'Hidden beaches',
]
---

<BaseLayout title={pageTitle} description={pageDescription} image={shareImage} imageAlt={shareImageAlt}>
  <section class="experience-hero">
    <div class="container experience-hero__inner">
      <div class="experience-hero__content">
        <span class="badge">Amalfi Day Experiences</span>
        <h1>
          Experiences from the <span class="accent-italic">Amalfi Coast</span>
        </h1>
        <p>
          Tailored days of light, flavor, and motion — curated by a local guide who knows where the
          coast is most alive.
        </p>
        <ul class="experience-hero__tags">
          {experienceTags.map((tag) => (
            <li class="experience-tag">{tag}</li>
          ))}
        </ul>
        <div class="experience-hero__actions">
          <a class="button" href="/contact">Plan your experience</a>
          <a class="button secondary" href="/photoshootings">See photoshootings</a>
        </div>
      </div>
      <div class="experience-hero__media" aria-hidden="true">
        {heroImages.map((src, index) => (
          <figure class="experience-hero__image">
            <img src={src} alt="" loading={index === 0 ? 'eager' : 'lazy'} />
          </figure>
        ))}
      </div>
    </div>
  </section>

  <section class="section photo-preview">
    <div class="container photo-preview__grid">
      <div class="photo-preview__content">
        <div class="section__header">
          <span class="guide-eyebrow">Photoshootings by Amalfi.Day</span>
          <h2>A preview of the photo stories we create</h2>
          <p>
            Golden-hour walks, cinematic alleys, and quiet terraces — here’s a glimpse of the mood
            and locations we build for every session.
          </p>
        </div>
        <a class="link-arrow" href="/photoshootings">
          Explore all photoshootings <i class="bi bi-arrow-up-right"></i>
        </a>
      </div>
      <div class="photo-preview__gallery">
        {photoshootings.map((item) => (
          <a class="shoot-card" href={item.href}>
            <div class="shoot-card__media">
              <img src={item.image} alt={item.title} loading="lazy" />
            </div>
            <div class="shoot-card__body">
              <h3>{item.title}</h3>
              <span>{item.location}</span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <section class="section experience-list">
    <div class="container">
      <div class="section__header experience-list__header">
        <span class="guide-eyebrow guide-eyebrow--light">Experiences</span>
        <h2>Experiences</h2>
        <p>Three ways to feel the coast — from quiet panoramas to fast, photo‑ready adventures.</p>
      </div>
      <div class="experience-cards">
        {experienceCards.map((item) => (
          <article class="experience-card">
            <h3>{item.title}</h3>
            <p>{item.text}</p>
          </article>
        ))}
      </div>
    </div>
  </section>

  <section class="section story">
    <div class="container story__grid">
      <div class="story__media">
        <img src="/staticpages/gregs-transparency.webp" alt="Greg, Amalfi.Day host" loading="lazy" />
      </div>
      <div class="story__copy">
        <div class="section__header">
          <span class="guide-eyebrow">Guided tours are the most enjoyable</span>
          <h2>
            The man who <span class="accent-italic story-accent">knows</span>
          </h2>
          <p>
            My name is Greg. I built this website to share my personal experience and deep knowledge
            of the Amalfi Coast. After years living here and exploring every corner, I design tours
            that feel effortless, intimate, and full of local secrets. Join me to discover the coast
            the way locals do.
          </p>
        </div>
      </div>
    </div>
  </section>

  <section class="section expertise expertise--tight">
    <div class="container expertise__grid">
      <article class="card expertise__item">
        <span class="expertise__icon"><i class="bi bi-camera2"></i></span>
        <h3>I’m a photographer</h3>
        <p>
          Years of fashion‑magazine work trained my eye for light, color, and composition — perfect
          for turning spontaneous moments into cinematic frames.
        </p>
      </article>
      <article class="card expertise__item">
        <span class="expertise__icon"><i class="bi bi-wine-glass"></i></span>
        <h3>Eno‑gastronomy master</h3>
        <p>
          I know the wines, kitchens, and stories behind them. You’ll taste the coast with someone
          who speaks the language of local food and wine.
        </p>
      </article>
    </div>
  </section>

  <section class="section guide-section">
    <div class="container">
      <div class="card guide-section__card">
        <div class="guide-section__grid">
          <div class="guide-section__content">
            <span class="guide-eyebrow guide-eyebrow--light">Only here you can find</span>
            <h1>Greg's personal <span class="accent-italic">guide</span> for guests</h1>
            <p>
              Inside my private guide I recommend every place I’ve tested myself: panoramic viewpoints,
              hidden beaches, authentic kitchens, and the exact timing that makes each spot magical.
            </p>
          </div>
          <div class="guide-section__media">
            <a class="guide-card" href="https://guide.amalfi.day" target="_blank" rel="noreferrer">
              <div class="guide-card__media">
                <video
                  class="guide-card__video"
                  muted
                  loop
                  playsinline
                  preload="none"
                  poster="/staticpages/video/atrani-sorrento-video.webp"
                >
                  <source data-src="/staticpages/video/atrani-sorrento-video.mp4" type="video/mp4" />
                  <img
                    src="/staticpages/video/atrani-sorrento-video.webp"
                    alt="Atrani to Sorrento coast"
                  />
                </video>
              </div>
              <span class="guide-card__badge">
                <span class="guide-card__badge-text">guide.amalfi.day</span>
                <i class="bi bi-arrow-up-right"></i>
              </span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<script is:inline>
  const heroVideo = document.querySelector('.guide-card__video')
  if (heroVideo) {
    const loadHeroVideo = () => {
      const sources = heroVideo.querySelectorAll('source')
      sources.forEach((source) => {
        if (source.dataset.src) {
          source.src = source.dataset.src
          source.removeAttribute('data-src')
        }
      })
      heroVideo.load()
      heroVideo.play().catch(() => {})
    }

    if (document.readyState === 'complete') {
      loadHeroVideo()
    } else {
      window.addEventListener('load', loadHeroVideo, { once: true })
    }
  }
</script>

<style>
  .guide-eyebrow {
    font-family: var(--font-mono);
    text-transform: uppercase;
    letter-spacing: 0.2em;
    font-size: 0.7rem;
    color: var(--color-text-muted);
    margin-bottom: 0.6rem;
    display: inline-flex;
  }

  .guide-eyebrow--light {
    color: rgba(255, 255, 255, 0.65);
  }

  .guide-eyebrow--dark {
    color: rgba(26, 26, 26, 0.7);
  }

  .section__header {
    display: grid;
    gap: 0.6rem;
    margin-bottom: 1.8rem;
  }

  .section__header h2 {
    font-size: clamp(1.9rem, 3.2vw, 3rem);
  }

  .section__header p {
    max-width: 34rem;
  }

  .experience-hero {
    position: relative;
    padding: 7rem 0 5.5rem;
    overflow: hidden;
    background: #ff5900;
    color: #ffffff;
  }

  .experience-hero::before {
    content: '';
    position: absolute;
    left: 50%;
    top: 0;
    width: min(1200px, 140vw);
    height: min(1200px, 140vw);
    transform: translate(-50%, -50%);
    background: radial-gradient(
      circle at 50% 50%,
      rgba(255, 195, 0, 0.95) 0%,
      rgba(255, 126, 0, 0.9) 45%,
      rgba(255, 89, 0, 1) 72%
    );
    opacity: 0.95;
    pointer-events: none;
  }

  .experience-hero__inner {
    position: relative;
    z-index: 1;
    display: grid;
    grid-template-columns: minmax(0, 1.05fr) minmax(0, 0.95fr);
    gap: 3rem;
    align-items: center;
  }

  .experience-hero__content h1 {
    font-size: clamp(2.4rem, 4.8vw, 4.5rem);
    line-height: 1.05;
    color: #ffffff;
  }

  .experience-hero__content p {
    max-width: 520px;
    font-size: 1.05rem;
    color: rgba(255, 255, 255, 0.88);
  }

  .experience-hero .accent-italic {
    color: #ffc300;
  }

  .experience-hero__tags {
    list-style: none;
    padding: 0;
    margin: 1.8rem 0 2rem;
    display: flex;
    flex-wrap: wrap;
    gap: 0.6rem;
  }

  .experience-tag {
    padding: 0.45rem 0.9rem;
    border-radius: 999px;
    background: rgba(255, 255, 255, 0.16);
    border: 1px solid rgba(255, 255, 255, 0.4);
    font-size: 0.85rem;
    font-weight: 500;
    color: #ffffff;
    backdrop-filter: blur(6px);
  }

  .experience-hero__actions {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .experience-hero .button {
    background: #ffffff;
    color: #1a1a1a;
  }

  .experience-hero .button:hover {
    background: #ffe9bf;
    color: #1a1a1a;
  }

  .experience-hero .button.secondary {
    background: rgba(255, 255, 255, 0.18);
    color: #ffffff;
    border: 1px solid rgba(255, 255, 255, 0.45);
  }

  .experience-hero .button.secondary:hover {
    background: rgba(255, 255, 255, 0.28);
    color: #ffffff;
  }

  .experience-hero__media {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    grid-template-rows: repeat(2, 200px);
    gap: 1rem;
  }

  .experience-hero__image {
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-lift);
    position: relative;
  }

  .experience-hero__image:nth-child(1) {
    grid-row: 1 / span 2;
  }

  .experience-hero__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .photo-preview {
    padding-top: 4.5rem;
    background: var(--color-surface);
  }

  .photo-preview__grid {
    display: grid;
    grid-template-columns: minmax(0, 0.95fr) minmax(0, 1.05fr);
    gap: 2.5rem;
    align-items: center;
  }

  .link-arrow {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    font-weight: 600;
    color: var(--color-text);
  }

  .photo-preview__gallery {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 1.2rem;
  }

  .shoot-card {
    display: grid;
    text-decoration: none;
    color: inherit;
    border-radius: var(--radius-md);
    overflow: hidden;
    box-shadow: var(--shadow-soft);
    background: var(--color-card);
    border: 1px solid var(--color-border);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .shoot-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lift);
    text-decoration: none;
  }

  .shoot-card__media {
    height: 180px;
    overflow: hidden;
  }

  .shoot-card__media img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .shoot-card__body {
    padding: 1.1rem 1.2rem 1.3rem;
    display: grid;
    gap: 0.4rem;
  }

  .shoot-card__body h3 {
    margin: 0;
    font-size: 1.05rem;
    color: var(--color-text);
  }

  .shoot-card__body span {
    font-size: 0.85rem;
    color: var(--color-text-muted);
  }

  .experience-list {
    background: linear-gradient(140deg, #0f1115 0%, #1a1f27 50%, #10151b 100%);
    color: #ffffff;
  }

  .experience-list__header {
    max-width: 700px;
    margin-bottom: 2.5rem;
  }

  .experience-list__header h2 {
    font-size: clamp(2rem, 4vw, 3.4rem);
  }

  .experience-list__header p {
    color: rgba(255, 255, 255, 0.7);
  }

  .experience-cards {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 1.5rem;
  }

  .experience-card {
    padding: 2rem;
    border-radius: var(--radius-lg);
    background: rgba(255, 255, 255, 0.06);
    border: 1px solid rgba(255, 255, 255, 0.12);
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.35);
    backdrop-filter: blur(12px);
  }

  .experience-card h3 {
    margin-bottom: 0.8rem;
    font-size: 1.35rem;
    color: #ffffff;
  }

  .experience-card p {
    color: rgba(255, 255, 255, 0.72);
  }

  .story__grid {
    display: grid;
    grid-template-columns: minmax(0, 0.8fr) minmax(0, 1fr);
    gap: 2.5rem;
    align-items: center;
  }

  .story__media {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .story__media img {
    width: 100%;
    height: auto;
    object-fit: contain;
  }

  .story__copy h2 {
    font-size: clamp(2rem, 3.5vw, 3.2rem);
  }

  .story-accent {
    color: var(--color-accent);
  }

  .expertise__grid {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 1.5rem;
  }

  .expertise--tight {
    padding-top: 2.2rem;
  }

  .expertise__item {
    padding: 2rem;
    display: grid;
    grid-template-columns: auto 1fr;
    column-gap: 1rem;
    row-gap: 0.4rem;
    align-items: start;
  }

  .expertise__item h3 {
    margin-bottom: 0.8rem;
    grid-column: 2;
  }

  .expertise__item p {
    grid-column: 2;
  }

  .expertise__icon {
    width: 46px;
    height: 46px;
    border-radius: 50%;
    background: var(--color-surface);
    color: var(--color-accent);
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-size: 1.2rem;
    box-shadow: var(--shadow-soft);
  }

  .guide-section {
    color: var(--color-text);
    position: relative;
  }

  .guide-section__card {
    background: transparent;
    padding: 3.5rem;
    border-radius: 32px;
    border: 6px solid transparent;
    box-shadow: var(--shadow-lift);
    position: relative;
    overflow: hidden;
  }

  .guide-section__card::after {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 32px;
    padding: 6px;
    background: linear-gradient(135deg, #ff5900 0%, #ffc300 100%);
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    pointer-events: none;
  }

  .guide-section__grid {
    position: relative;
    z-index: 1;
    display: grid;
    grid-template-columns: minmax(0, 1fr) minmax(0, 0.9fr);
    gap: 2.5rem;
    align-items: center;
  }

  .guide-section h1 {
    color: inherit;
  }

  .guide-section .accent-italic {
    color: inherit;
  }

  .guide-section p {
    color: var(--color-text-muted);
  }

  :global([data-theme='night']) .guide-section {
    color: #ffffff;
  }

  :global([data-theme='night']) .guide-section p {
    color: rgba(255, 255, 255, 0.8);
  }

  .guide-section__media {
    width: 100%;
  }

  .guide-card {
    position: relative;
    border-radius: 24px;
    overflow: hidden;
    padding: 0;
    background: transparent;
    border: none;
    box-shadow: none;
    min-height: 100%;
    display: grid;
    grid-template-columns: minmax(0, 1fr);
    align-items: start;
    text-decoration: none;
    height: 100%;
    aspect-ratio: 16 / 9;
  }

  .guide-card:hover {
    text-decoration: none;
  }

  .guide-card__media {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .guide-card__video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .guide-card__badge {
    position: absolute;
    bottom: 12px;
    left: 12px;
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    padding: 0.35rem 0.6rem;
    border-radius: 999px;
    background: #ffffff;
    font-family: var(--font-display);
    font-style: italic;
    font-size: 14px;
    letter-spacing: 0.02em;
    color: #111111;
    z-index: 2;
  }

  .guide-card__badge i {
    color: inherit;
    font-size: 0.95em;
  }

  .guide-card:hover .guide-card__badge {
    background: var(--color-accent);
    color: #ffffff;
  }

  @media (max-width: 960px) {
    .experience-hero__inner,
    .photo-preview__grid,
    .guide-section__grid,
    .story__grid {
      grid-template-columns: 1fr;
    }

    .experience-hero__media {
      grid-template-rows: repeat(2, 180px);
    }

    .experience-cards {
      grid-template-columns: 1fr;
    }

    .expertise__grid {
      grid-template-columns: 1fr;
    }

    .guide-section__card {
      padding: 2.5rem;
    }
  }

  @media (max-width: 640px) {
    .experience-hero {
      padding: 6rem 0 4rem;
    }

    .experience-hero__media {
      grid-template-columns: 1fr;
      grid-template-rows: repeat(3, 180px);
    }

    .experience-hero__image:nth-child(1) {
      grid-row: auto;
    }

    .photo-preview__gallery {
      grid-template-columns: 1fr;
    }

    .shoot-card__media {
      height: 200px;
    }

    .guide-section__card {
      padding: 2rem;
    }
  }
</style>
