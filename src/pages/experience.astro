<script is:inline>
  ;(function () {
    const slides = document.querySelectorAll('.xp-hero__slide')
    const dots = document.querySelectorAll('.xp-hero__dot')
    if (!slides.length) return

    let current = 0
    const DURATION = 6000

    function go(next) {
      slides[current].classList.remove('is-active')
      dots[current].classList.remove('is-active')
      current = next
      slides[current].classList.add('is-active')
      dots[current].classList.add('is-active')
    }

    let timer = setInterval(() => go((current + 1) % slides.length), DURATION)

    dots.forEach((dot) => {
      dot.addEventListener('click', () => {
        clearInterval(timer)
        go(Number(dot.dataset.slide))
        timer = setInterval(() => go((current + 1) % slides.length), DURATION)
      })
    })
  })()

  /* Guide video lazy load (unchanged) */
  const heroVideo = document.querySelector('.guide-card__video')
  if (heroVideo) {
    const loadHeroVideo = () => {
      const sources = heroVideo.querySelectorAll('source')
      sources.forEach((source) => {
        if (source.dataset.src) {
          source.src = source.dataset.src
          source.removeAttribute('data-src')
        }
      })
      heroVideo.load()
      heroVideo.play().catch(() => {})
    }

    if (document.readyState === 'complete') {
      loadHeroVideo()
    } else {
      window.addEventListener('load', loadHeroVideo, { once: true })
    }
  }
</script>

