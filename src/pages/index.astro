---
import BaseLayout from '../layouts/BaseLayout.astro'
import { featuredPhotoshoots } from '../data/site'
---

<BaseLayout title="Amalfi.Day — Photostory Sessions on the Amalfi Coast">
  <section class="hero">
    <div class="container hero__inner">
      <div class="hero__content">
        <div class="badge">Story-driven photoshoots</div>
        <h1>
          Capture the <span class="accent-italic">golden</span> Amalfi light with
          <span class="accent-italic">cinematic</span> photo sessions
        </h1>
        <p>
          Private photo stories, curated locations, and a relaxed guiding style. We create
          editorial-grade memories with warm Mediterranean energy.
        </p>
        <div class="hero__actions">
          <a class="button" href="/contact">Book Your Photoshoot</a>
          <a class="button secondary" href="/photo">Explore Photoshoots</a>
        </div>
      </div>
      <div class="hero__card card">
        <div class="hero__card-top">
          <span>Featured session</span>
          <span class="hero__tag">New</span>
        </div>
        <h3>Atrani golden session</h3>
        <p>Autumn light, hidden alleys, and coastal backdrops.</p>
        <a class="hero__link" href="/photo/atrani-iana-session">View report →</a>
      </div>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <div class="section__header">
        <h2>
          Recent <span class="accent-italic">photoshoots</span>
        </h2>
        <p>Stories and highlights from the Amalfi Coast.</p>
      </div>
      <div class="grid">
        {featuredPhotoshoots.map((item) => (
          <article class="card grid__item">
            <div class="grid__media"></div>
            <div class="grid__content">
              <h3>{item.title}</h3>
              <p>{item.location}</p>
              <a href={item.href}>View report →</a>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .hero {
    padding: 6rem 0 4rem;
  }

  .hero__inner {
    display: grid;
    grid-template-columns: 1.2fr 0.8fr;
    gap: 3rem;
    align-items: center;
  }

  .hero__content h1 {
    font-size: clamp(2.6rem, 4vw, 4.2rem);
    line-height: 1.1;
  }

  .hero__actions {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    margin-top: 1.5rem;
  }

  .hero__card {
    padding: 2rem;
    background: #ffffff;
    position: relative;
    overflow: hidden;
  }

  .hero__card::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(255, 89, 0, 0.12), rgba(0, 156, 255, 0.12));
    z-index: 0;
  }

  .hero__card > * {
    position: relative;
  }

  .hero__card-top {
    display: flex;
    justify-content: space-between;
    font-size: 0.85rem;
    color: var(--color-text-muted);
  }

  .hero__tag {
    color: #ffffff;
    background: var(--gradient-azure);
    padding: 0.2rem 0.6rem;
    border-radius: 999px;
  }

  .hero__link {
    font-weight: 600;
  }

  .section__header {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    gap: 2rem;
    margin-bottom: 2.5rem;
  }

  .section__header h2 {
    font-size: clamp(2rem, 3vw, 3rem);
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 1.5rem;
  }

  .grid__item {
    overflow: hidden;
  }

  .grid__media {
    height: 180px;
    background: linear-gradient(140deg, rgba(255, 89, 0, 0.2), rgba(255, 195, 0, 0.2));
  }

  .grid__content {
    padding: 1.5rem;
  }

  @media (max-width: 900px) {
    .hero__inner {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 640px) {
    .section__header {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>
