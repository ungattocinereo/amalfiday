---
import BaseLayout from '../layouts/BaseLayout.astro'
import { featuredPhotoshoots, heroLinks, etsyUrl } from '../data/site'
import { getGhostPosts } from '../data/ghost'

const staticPages = [
  { title: 'How to get here', href: '/how-to-get', note: 'Routes, transfers, and arrival tips.' },
  { title: 'What to do', href: '/what-to-do', note: 'Ideas, experiences, and local gems.' },
  { title: 'Parking tips', href: '/parking', note: 'Best places and timing strategies.' },
  { title: 'Beach reviews', href: '/beaches', note: 'Where to swim, relax, and shoot.' },
]

const newsPosts = await getGhostPosts({ limit: 2 })

---
<BaseLayout title="Amalfi.Day — CrystalPontomAlphiday">
  <section class="hero hero--orange">
    <div class="container hero__inner">
      <div class="hero__intro">
        <h1 class="hero__title">
          Cristall Pont <span class="hero__domain">/amalfi.day</span>
        </h1>
        <p class="hero__lead">
          Here you can find public transport timetables. Information about parking in Amalfi &
          Atrani. Places to take perfect photos and much more...
        </p>
      </div>

      <div class="hero__grid">
        <a class="guide-card" href="https://guide.amalfi.day" target="_blank" rel="noreferrer">
          <div class="guide-card__image"></div>
          <div class="guide-card__content">
            <span class="guide-card__eyebrow">guide.amalfi.day</span>
            <h3>
              Take your <span class="accent-italic">Amalfi in a Pocket</span>
            </h3>
            <p>
              Plan your perfect Amalfi Coast day with ready-to-use ideas for walks, swims, moto
              rides, and food stops — with clear directions, offline-friendly maps, and
              simplified transport timings.
            </p>
            <span class="guide-card__cta">
              <i class="bi bi-arrow-up-right"></i> Open the guide
            </span>
          </div>
        </a>

        <a class="hero__mini" href={heroLinks.busPdf} id="bus">
          <i class="bi bi-bus-front"></i>
          <div>
            <strong>Bus timetables</strong>
            <span>Download PDF</span>
          </div>
          <i class="bi bi-download"></i>
        </a>

        <a class="hero__mini" href={heroLinks.ferryPdf} id="ferry">
          <i class="bi bi-ship"></i>
          <div>
            <strong>Ferry timetables</strong>
            <span>Download PDF</span>
          </div>
          <i class="bi bi-download"></i>
        </a>

        <a class="hero__mini" href="/apartments">
          <i class="bi bi-building"></i>
          <div>
            <strong>Наши апартаменты</strong>
            <span>Booking & Airbnb options</span>
          </div>
          <i class="bi bi-arrow-up-right"></i>
        </a>
      </div>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <div class="section__header">
        <h2>
          Essential <span class="accent-italic">pages</span>
        </h2>
        <p>Quick guides for getting around Amalfi.</p>
      </div>
      <div class="static-grid">
        {staticPages.map((item) => (
          <a class="card static-card" href={item.href}>
            <h3>{item.title}</h3>
            <p>{item.note}</p>
            <span class="static-card__icon">
              <i class="bi bi-arrow-up-right"></i>
            </span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <section class="section section--photos">
    <div class="container">
      <div class="section__header">
        <h2>
          <a class="section__title-link" href="/photoshootings">
            Photo <span class="accent-italic">sessions</span>
          </a>
        </h2>
        <p>
          <a class="section__subtitle-link" href="/photoshootings">
            Scroll through the latest stories and shooting concepts.
          </a>
        </p>
      </div>
      <div class="scroll" aria-label="Featured photoshoots">
        {featuredPhotoshoots.map((item, index) => (
          <a class="scroll__card" href={item.href}>
            <div class="scroll__media" data-index={index}></div>
            <div class="scroll__overlay">
              <h3>{item.title}</h3>
              <span><i class="bi bi-geo-alt"></i> {item.location}</span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <section class="section section--news">
    <div class="container">
      <div class="section__header news__header">
        <h2>
          Amalfi <span class="accent-italic">News</span>
        </h2>
        <div class="news__cta">
          <p>Visit the news blog — fresh stories and local insights are always waiting there.</p>
          <a class="button secondary" href="/blog">
            <i class="bi bi-newspaper"></i> Go to blog
          </a>
        </div>
      </div>
      <div class="news-scroll" aria-label="Latest blog posts">
        {newsPosts.map((post) => (
          <a class="news-card" href={post.href}>
            <div class="news-card__media">
              {post.image ? (
                <img src={post.image} alt={post.title} loading="lazy" decoding="async" />
              ) : (
                <div class="news-card__placeholder" aria-hidden="true"></div>
              )}
            </div>
            <span class="news-card__date">{post.date}</span>
            <h3>{post.title}</h3>
          </a>
        ))}
      </div>
    </div>
  </section>

  <section class="section etsy">
    <div class="container etsy__inner">
      <div>
        <h2>
          Visit our <span class="accent-italic">Etsy</span> shop
        </h2>
        <p>Prints, presets, and handcrafted Amalfi souvenirs.</p>
      </div>
      <a class="button secondary" href={etsyUrl} target="_blank" rel="noreferrer">
        <i class="bi bi-bag-heart"></i> Open Etsy store
      </a>
    </div>
  </section>

  <section class="prefooter">
    <div class="container prefooter__inner">
      <div class="prefooter__copy">
        <h2>Discover Your Perfect Amalfi Adventure</h2>
        <div class="prefooter__line"></div>
        <p>
          At Amalfi.day, we’re all about creating special moments just for you—whether that’s
          zipping around on a scooter, cruising on a motorboat, or getting hands-on with local
          crafts. Let’s make it unforgettable.
        </p>
        <div class="prefooter__actions">
          <a class="button" href="/contact">
            <i class="bi bi-send"></i> Send a request
          </a>
          <a class="prefooter__link" href="/experience">
            <i class="bi bi-stars"></i> Check our experiences
          </a>
        </div>
      </div>
      <div class="prefooter__media">
        <div class="prefooter__stack">
          <img
            class="prefooter__photo"
            src="/pre-footer/boat-tours-in-amalfi.webp"
            alt="Boat tours in Amalfi Coast"
            loading="lazy"
          />
          <img
            class="prefooter__photo"
            src="/pre-footer/girl-on-moto-in-amalfi-small.webp"
            alt="Amalfi scooter ride"
            loading="lazy"
          />
          <img
            class="prefooter__photo"
            src="/pre-footer/2-food-in-amalfi-good.webp"
            alt="Amalfi food experience"
            loading="lazy"
          />
        </div>
        <div class="prefooter__newsletter">
          <span>Get updates via email</span>
          <button class="button secondary" type="button">Subscribe</button>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .hero {
    padding: calc(6rem + var(--header-space)) 0 4.5rem;
    margin-top: calc(-1 * var(--header-space));
    position: relative;
    background: #ff5900;
    color: #ffffff;
    overflow: hidden;
    box-sizing: border-box;
  }

  .hero::before {
    content: '';
    position: absolute;
    left: 50%;
    top: -40%;
    width: min(1200px, 140vw);
    height: min(1200px, 140vw);
    transform: translateX(-50%);
    background: radial-gradient(
      circle at 50% 50%,
      rgba(255, 195, 0, 0.95) 0%,
      rgba(255, 126, 0, 0.9) 45%,
      rgba(255, 89, 0, 1) 72%
    );
    opacity: 0.95;
  }

  .hero__inner {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .hero__intro {
    text-align: center;
    max-width: 960px;
    margin: 0 auto;
  }

  .hero__title {
    font-family: var(--font-display);
    font-size: clamp(2.8rem, 5vw, 4.6rem);
    margin-bottom: 1.2rem;
  }

  .hero__domain {
    font-style: italic;
    opacity: 0.9;
  }

  .hero__lead {
    color: rgba(255, 255, 255, 0.9);
    font-size: clamp(1.2rem, 2.2vw, 1.5rem);
    margin-bottom: 1.5rem;
    font-family: var(--font-display);
  }


  .hero__grid {
    display: grid;
    grid-template-columns: minmax(0, 2fr) minmax(0, 1fr);
    gap: 1.2rem;
    align-items: stretch;
  }

  .guide-card {
    position: relative;
    border-radius: 24px;
    overflow: hidden;
    padding: 2.2rem;
    color: #1a1a1a;
    background: rgba(255, 255, 255, 0.96);
    border: 1px solid rgba(255, 255, 255, 0.4);
    box-shadow: 0 24px 60px rgba(0, 0, 0, 0.25);
    min-height: 320px;
    display: flex;
    align-items: flex-end;
    text-decoration: none;
  }

  .guide-card:hover {
    text-decoration: none;
  }

  .guide-card__image {
    position: absolute;
    inset: 0;
    background: linear-gradient(
        120deg,
        rgba(255, 195, 0, 0.2),
        rgba(0, 156, 255, 0.2)
      ),
      radial-gradient(circle at 20% 30%, rgba(255, 89, 0, 0.2), transparent 60%);
  }

  .guide-card__content {
    position: relative;
    z-index: 1;
    max-width: 520px;
  }

  .guide-card__eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.12em;
    font-size: 0.7rem;
    font-weight: 600;
    color: rgba(26, 26, 26, 0.6);
  }

  .guide-card h3 {
    font-size: clamp(1.6rem, 3vw, 2.2rem);
    margin: 0.8rem 0;
  }

  .guide-card p {
    color: rgba(26, 26, 26, 0.7);
  }

  .guide-card__cta {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 600;
    color: var(--color-aux);
  }

  .hero__mini {
    border-radius: 18px;
    padding: 1.2rem 1.4rem;
    background: rgba(255, 255, 255, 0.12);
    border: 1px solid rgba(255, 255, 255, 0.35);
    color: #ffffff;
    display: flex;
    align-items: center;
    gap: 1rem;
    justify-content: space-between;
    backdrop-filter: blur(8px);
    text-decoration: none;
  }

  .hero__mini:hover {
    text-decoration: none;
  }

  .hero__mini strong {
    display: block;
    font-size: 1rem;
  }

  .hero__mini span {
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.75);
  }

  .section__header {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    gap: 2rem;
    margin-bottom: 2.5rem;
  }

  .section__header h2 {
    font-size: clamp(2rem, 3vw, 3rem);
  }

  .section__title-link,
  .section__subtitle-link {
    color: inherit;
    text-decoration: none;
  }

  .section--photos .section__title-link {
    position: relative;
    display: inline-block;
  }

  .section--photos .section__title-link::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: -6px;
    width: 0;
    height: 3px;
    background: var(--gradient-sunset);
    transition: width 0.25s ease;
  }

  .section--photos .section__title-link:hover::after {
    width: 100%;
  }

  .section--photos .section__subtitle-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-text-muted);
    font-weight: 500;
    border-bottom: 1px dashed transparent;
    transition: color 0.2s ease, border-color 0.2s ease, transform 0.2s ease;
  }

  .section--photos .section__subtitle-link::after {
    content: '→';
    transition: transform 0.2s ease;
  }

  .section--photos .section__subtitle-link:hover {
    color: var(--color-text);
    border-color: var(--color-accent);
    transform: translateX(4px);
  }

  .section--photos .section__subtitle-link:hover::after {
    transform: translateX(4px);
  }

  .static-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 1.5rem;
  }

  .static-card {
    padding: 1.8rem;
    position: relative;
    overflow: hidden;
  }

  .static-card__icon {
    position: absolute;
    right: 1.2rem;
    bottom: 1.2rem;
    font-size: 1.2rem;
    color: var(--color-text-muted);
  }

  .scroll {
    display: flex;
    gap: 1.5rem;
    overflow-x: auto;
    padding-bottom: 1rem;
    scroll-snap-type: x mandatory;
  }

  .scroll__card {
    min-width: 280px;
    height: 360px;
    border-radius: var(--radius-lg);
    position: relative;
    overflow: hidden;
    scroll-snap-align: start;
    box-shadow: var(--shadow-soft);
  }

  .scroll__media {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(255, 89, 0, 0.2), rgba(1, 98, 255, 0.25));
  }

  .scroll__media[data-index='1'] {
    background: linear-gradient(135deg, rgba(255, 195, 0, 0.25), rgba(255, 89, 0, 0.2));
  }

  .scroll__media[data-index='2'] {
    background: linear-gradient(135deg, rgba(0, 156, 255, 0.25), rgba(1, 98, 255, 0.2));
  }

  .scroll__overlay {
    position: absolute;
    inset: auto 0 0;
    padding: 1.5rem;
    background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.6) 100%);
    color: #ffffff;
  }

  .scroll__overlay span {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
  }

  .section--news {
    background: linear-gradient(120deg, rgba(1, 98, 255, 0.06), rgba(255, 195, 0, 0.08));
  }

  .news__header {
    align-items: flex-end;
  }

  .news__cta {
    max-width: 360px;
    text-align: right;
    display: flex;
    flex-direction: column;
    gap: 0.8rem;
  }

  .news__cta p {
    margin: 0;
  }

  .news-scroll {
    display: flex;
    gap: 1.5rem;
    overflow-x: auto;
    padding-bottom: 1rem;
    scroll-snap-type: x mandatory;
  }

  .news-card {
    min-width: 260px;
    flex: 0 0 260px;
    background: var(--color-card);
    border-radius: var(--radius-lg);
    border: 1px solid var(--color-border);
    box-shadow: var(--shadow-soft);
    padding: 1rem;
    display: flex;
    flex-direction: column;
    gap: 0.7rem;
    color: inherit;
    text-decoration: none;
    scroll-snap-align: start;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .news-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lift);
    text-decoration: none;
  }

  .news-card__media {
    height: 180px;
    border-radius: 14px;
    overflow: hidden;
    background: var(--color-surface);
    position: relative;
  }

  .news-card__media img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .news-card__placeholder {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(255, 89, 0, 0.18), rgba(1, 98, 255, 0.2));
  }

  .news-card__date {
    font-family: var(--font-mono);
    font-size: 0.68rem;
    letter-spacing: 0.16em;
    text-transform: uppercase;
    color: var(--color-text-muted);
  }

  .news-card h3 {
    margin: 0;
    font-size: 1.05rem;
    line-height: 1.35;
  }

  .etsy {
    background: linear-gradient(120deg, rgba(255, 89, 0, 0.08), rgba(1, 98, 255, 0.08));
  }

  .etsy__inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
  }

  .prefooter {
    padding: 4rem 0 5rem;
    background: var(--color-bg);
  }

  .prefooter__inner {
    display: grid;
    grid-template-columns: 1.2fr 0.8fr;
    gap: 3rem;
    align-items: start;
  }

  .prefooter__line {
    height: 3px;
    width: 120px;
    background: var(--gradient-sunset);
    border-radius: 999px;
    margin: 1rem 0 1.5rem;
  }

  .prefooter__actions {
    display: flex;
    gap: 1rem;
    align-items: center;
    flex-wrap: wrap;
  }

  .prefooter__link {
    font-weight: 600;
    color: var(--color-text);
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
  }

  .prefooter__media {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .prefooter__stack {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 0.8rem;
  }

  .prefooter__photo {
    height: 120px;
    border-radius: 12px;
    width: 100%;
    object-fit: cover;
    display: block;
  }

  .prefooter__newsletter {
    display: flex;
    gap: 1rem;
    align-items: center;
    padding: 1rem 1.2rem;
    border-radius: 16px;
    background: var(--color-surface);
    justify-content: space-between;
  }

  @media (max-width: 1000px) {
    .hero__grid {
      grid-template-columns: 1fr;
    }

    .prefooter__inner {
      grid-template-columns: 1fr;
    }

    .etsy__inner {
      flex-direction: column;
      align-items: flex-start;
    }
  }

  @media (max-width: 640px) {
    .section__header {
      flex-direction: column;
      align-items: flex-start;
    }

    .news__cta {
      text-align: left;
      align-items: flex-start;
    }

    .hero {
      padding: 5rem 0 3rem;
    }

    .hero__intro {
      text-align: left;
    }
  }
</style>
