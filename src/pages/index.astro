---
import BaseLayout from '../layouts/BaseLayout.astro'
import { featuredPhotoshoots, heroLinks, etsyUrl } from '../data/site'

const staticPages = [
  { title: 'How to get here', href: '/how-to-get', note: 'Routes, transfers, and arrival tips.' },
  { title: 'What to do', href: '/what-to-do', note: 'Ideas, experiences, and local gems.' },
  { title: 'Parking tips', href: '/parking', note: 'Best places and timing strategies.' },
  { title: 'Beach reviews', href: '/beaches', note: 'Where to swim, relax, and shoot.' },
]

const heroApartments = [
  { label: 'Booking.com', href: 'https://www.booking.com' },
  { label: 'Airbnb', href: 'https://www.airbnb.com' },
]
---
<BaseLayout title="Amalfi.Day — CrystalPontomAlphiday">
  <section class="hero">
    <div class="container">
      <div class="hero__mast">CrystalPontomAlphiday</div>
      <div class="hero__grid">
        <div class="hero__panel hero__panel--pdf" id="ferry">
          <div class="hero__panel-head">
            <span class="badge"><i class="bi bi-ship"></i> Ferry timetables</span>
            <span class="hero__meta">PDF preview placeholder</span>
          </div>
          <div class="hero__pdf"></div>
          <a class="hero__action" href={heroLinks.ferryPdf}>
            <i class="bi bi-file-earmark-pdf"></i> Open ferry PDF
          </a>
        </div>

        <a class="hero__panel hero__panel--bus" href={heroLinks.busPdf} id="bus">
          <div>
            <div class="hero__panel-title">
              <i class="bi bi-bus-front"></i> Bus timetables
            </div>
            <p>Download the latest bus PDF schedule.</p>
          </div>
          <span class="hero__action"><i class="bi bi-download"></i> Download</span>
        </a>

        <div class="hero__panel hero__panel--apartments">
          <div>
            <div class="hero__panel-title">
              <i class="bi bi-building"></i> Наши апартаменты
            </div>
            <p>
              Stylish stays with the best light, perfect for your Amalfi story and photo days.
            </p>
          </div>
          <div class="hero__chips">
            {heroApartments.map((link) => (
              <a class="chip" href={link.href} target="_blank" rel="noreferrer">
                {link.label}
              </a>
            ))}
          </div>
        </div>

        <a class="hero__panel hero__panel--download" href={heroLinks.ferryPdf}>
          <div>
            <div class="hero__panel-title">
              <i class="bi bi-file-earmark-pdf"></i> Ferry PDF
            </div>
            <p>Download full ferry schedule.</p>
          </div>
          <span class="hero__action"><i class="bi bi-download"></i> Download</span>
        </a>
      </div>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <div class="section__header">
        <h2>
          Essential <span class="accent-italic">pages</span>
        </h2>
        <p>Quick guides for getting around Amalfi.</p>
      </div>
      <div class="static-grid">
        {staticPages.map((item) => (
          <a class="card static-card" href={item.href}>
            <h3>{item.title}</h3>
            <p>{item.note}</p>
            <span class="static-card__icon">
              <i class="bi bi-arrow-up-right"></i>
            </span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <div class="section__header">
        <h2>
          Photo <span class="accent-italic">sessions</span>
        </h2>
        <p>Scroll through the latest stories and shooting concepts.</p>
      </div>
      <div class="scroll" aria-label="Featured photoshoots">
        {featuredPhotoshoots.map((item, index) => (
          <a class="scroll__card" href={item.href}>
            <div class="scroll__media" data-index={index}></div>
            <div class="scroll__overlay">
              <h3>{item.title}</h3>
              <span><i class="bi bi-geo-alt"></i> {item.location}</span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <section class="section etsy">
    <div class="container etsy__inner">
      <div>
        <h2>
          Visit our <span class="accent-italic">Etsy</span> shop
        </h2>
        <p>Prints, presets, and handcrafted Amalfi souvenirs.</p>
      </div>
      <a class="button secondary" href={etsyUrl} target="_blank" rel="noreferrer">
        <i class="bi bi-bag-heart"></i> Open Etsy store
      </a>
    </div>
  </section>

  <section class="prefooter">
    <div class="container prefooter__inner">
      <div class="prefooter__copy">
        <h2>Discover Your Perfect Amalfi Adventure</h2>
        <div class="prefooter__line"></div>
        <p>
          At Amalfi.day, we’re all about creating special moments just for you—whether that’s
          zipping around on a scooter, cruising on a motorboat, or getting hands-on with local
          crafts. Let’s make it unforgettable.
        </p>
        <div class="prefooter__actions">
          <a class="button" href="/contact">
            <i class="bi bi-send"></i> Send a request
          </a>
          <a class="prefooter__link" href="/experience">
            <i class="bi bi-stars"></i> Check our experiences
          </a>
        </div>
      </div>
      <div class="prefooter__media">
        <div class="prefooter__stack">
          <div class="prefooter__photo"></div>
          <div class="prefooter__photo"></div>
          <div class="prefooter__photo"></div>
        </div>
        <div class="prefooter__newsletter">
          <span>Get updates via email</span>
          <button class="button secondary" type="button">Subscribe</button>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .hero {
    padding: 4rem 0 3rem;
  }

  .hero__mast {
    font-family: var(--font-display);
    font-size: clamp(2.8rem, 5vw, 4.4rem);
    margin-bottom: 2.5rem;
  }

  .hero__grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    grid-template-rows: auto auto;
    gap: 1.5rem;
  }

  .hero__panel {
    border-radius: var(--radius-lg);
    background: var(--color-card);
    padding: 1.5rem;
    border: 1px solid var(--color-border);
    box-shadow: var(--shadow-soft);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .hero__panel-head {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
  }

  .hero__panel-head .badge {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
  }

  .hero__panel-title {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }

  .hero__action {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
  }

  .hero__panel--pdf {
    grid-row: span 2;
    background: linear-gradient(135deg, rgba(255, 195, 0, 0.12), rgba(0, 156, 255, 0.08));
  }

  .hero__pdf {
    flex: 1;
    margin: 1.2rem 0;
    border-radius: var(--radius-md);
    background: repeating-linear-gradient(
      -45deg,
      rgba(255, 255, 255, 0.8),
      rgba(255, 255, 255, 0.8) 12px,
      rgba(240, 242, 246, 0.8) 12px,
      rgba(240, 242, 246, 0.8) 24px
    );
    min-height: 260px;
  }

  .hero__panel--bus {
    background: #0d1b2a;
    color: #ffffff;
    gap: 1rem;
  }

  .hero__panel--bus p {
    color: rgba(255, 255, 255, 0.75);
  }

  .hero__panel--bus .hero__action {
    color: #ffffff;
  }

  .hero__panel--apartments {
    background: var(--color-card);
    gap: 1rem;
  }

  .hero__panel--download {
    background: linear-gradient(135deg, rgba(1, 98, 255, 0.12), rgba(0, 156, 255, 0.2));
  }

  .hero__panel-title {
    font-size: 1.1rem;
    font-weight: 600;
  }

  .hero__meta {
    font-size: 0.85rem;
    color: var(--color-text-muted);
  }

  .hero__action {
    font-weight: 600;
  }

  .hero__chips {
    display: flex;
    gap: 0.6rem;
    flex-wrap: wrap;
  }

  .section__header {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    gap: 2rem;
    margin-bottom: 2.5rem;
  }

  .section__header h2 {
    font-size: clamp(2rem, 3vw, 3rem);
  }

  .static-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 1.5rem;
  }

  .static-card {
    padding: 1.8rem;
    position: relative;
    overflow: hidden;
  }

  .static-card__icon {
    position: absolute;
    right: 1.2rem;
    bottom: 1.2rem;
    font-size: 1.2rem;
    color: var(--color-text-muted);
  }

  .scroll {
    display: flex;
    gap: 1.5rem;
    overflow-x: auto;
    padding-bottom: 1rem;
    scroll-snap-type: x mandatory;
  }

  .scroll__card {
    min-width: 280px;
    height: 360px;
    border-radius: var(--radius-lg);
    position: relative;
    overflow: hidden;
    scroll-snap-align: start;
    box-shadow: var(--shadow-soft);
  }

  .scroll__media {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(255, 89, 0, 0.2), rgba(1, 98, 255, 0.25));
  }

  .scroll__media[data-index='1'] {
    background: linear-gradient(135deg, rgba(255, 195, 0, 0.25), rgba(255, 89, 0, 0.2));
  }

  .scroll__media[data-index='2'] {
    background: linear-gradient(135deg, rgba(0, 156, 255, 0.25), rgba(1, 98, 255, 0.2));
  }

  .scroll__overlay {
    position: absolute;
    inset: auto 0 0;
    padding: 1.5rem;
    background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.6) 100%);
    color: #ffffff;
  }

  .scroll__overlay span {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
  }

  .etsy {
    background: linear-gradient(120deg, rgba(255, 89, 0, 0.08), rgba(1, 98, 255, 0.08));
  }

  .etsy__inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
  }

  .prefooter {
    padding: 4rem 0 5rem;
    background: var(--color-bg);
  }

  .prefooter__inner {
    display: grid;
    grid-template-columns: 1.2fr 0.8fr;
    gap: 3rem;
    align-items: start;
  }

  .prefooter__line {
    height: 3px;
    width: 120px;
    background: var(--gradient-sunset);
    border-radius: 999px;
    margin: 1rem 0 1.5rem;
  }

  .prefooter__actions {
    display: flex;
    gap: 1rem;
    align-items: center;
    flex-wrap: wrap;
  }

  .prefooter__link {
    font-weight: 600;
    color: var(--color-text);
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
  }

  .prefooter__media {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .prefooter__stack {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 0.8rem;
  }

  .prefooter__photo {
    height: 120px;
    border-radius: 12px;
    background: linear-gradient(135deg, rgba(255, 89, 0, 0.2), rgba(0, 156, 255, 0.2));
  }

  .prefooter__newsletter {
    display: flex;
    gap: 1rem;
    align-items: center;
    padding: 1rem 1.2rem;
    border-radius: 16px;
    background: var(--color-surface);
    justify-content: space-between;
  }

  @media (max-width: 1000px) {
    .hero__grid {
      grid-template-columns: 1fr;
      grid-template-rows: auto;
    }

    .hero__panel--pdf {
      grid-row: auto;
    }

    .prefooter__inner {
      grid-template-columns: 1fr;
    }

    .etsy__inner {
      flex-direction: column;
      align-items: flex-start;
    }
  }

  @media (max-width: 640px) {
    .section__header {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>
