---
import BaseLayout from '../layouts/BaseLayout.astro'
import { featuredPhotoshoots, heroLinks } from '../data/site'
import { getGhostPosts } from '../data/ghost'
import heroQuatrains from '../../hero-quatrains.json'

export const revalidate = 60 * 60 * 12

const pageTitle = 'Amalfi.Day — CristallPont Amalfi Day'
const pageDescription =
  'Amalfi.Day is a local guide for Amalfi Coast photoshoots, apartments in Atrani, beach reviews, and curated experiences in Amalfi, Ravello, and Positano.'
const shareImage = featuredPhotoshoots[0]?.image ?? '/pre-footer/boat-tours-in-amalfi.webp'
const shareImageAlt = 'Amalfi Coast photoshoot highlights'

const staticPages = [
  {
    title: 'Beach reviews',
    href: '/beaches',
    note: 'Best spots for swimming, sun, and photos.',
    image: '/staticpages/mainpage/beach-reviews.webp',
    imageAlt: 'Amalfi Coast beach overview',
  },
  {
    title: 'Apartment rentals',
    href: '/apartments',
    note: 'Apartments, suites, and rooms near Atrani beach.',
    image: '/staticpages/mainpage/rental-houses.webp',
    imageAlt: 'Amalfi Coast apartments with sea view',
  },
  {
    title: 'Parking tips',
    href: '/parking',
    note: 'Where to park and how to avoid traffic.',
    image: '/staticpages/mainpage/parking.webp',
    imageAlt: 'Parking area on the Amalfi Coast',
  },
  {
    title: 'Public transport',
    href: '/timetables',
    note: 'Buses, ferries, and regional routes in one place.',
    image: '/staticpages/mainpage/allublictransport.webp',
    imageAlt: 'Public transport connections along the Amalfi Coast',
  },
]

const newsPosts = await getGhostPosts({ limit: 8 })
const quatrains = Array.isArray(heroQuatrains) ? heroQuatrains : []
const fallbackQuatrain =
  Array.isArray(quatrains[0]) && quatrains[0].length === 4
    ? quatrains[0]
    : ['', '', '', '']

---
<BaseLayout
  title={pageTitle}
  description={pageDescription}
  image={shareImage}
  imageAlt={shareImageAlt}
>
  <section class="hero hero--orange">
    <div class="container hero__inner">
      <div class="hero__intro">
        <div class="hero__quatrain" data-quatrains={JSON.stringify(quatrains)}>
          <p class="hero__line" data-quatrain-line>{fallbackQuatrain[0]}</p>
          <p class="hero__line" data-quatrain-line>{fallbackQuatrain[1]}</p>
          <p class="hero__line" data-quatrain-line>{fallbackQuatrain[2]}</p>
          <p class="hero__line" data-quatrain-line>{fallbackQuatrain[3]}</p>
        </div>
        <div class="hero__logo">
          <img src="/brand/amalficarion_logo.svg" alt="The Amalfication" />
        </div>
      </div>

      <div class="hero__mosaic">
        <div class="hero__tile hero__tile--primary">
          <a class="guide-card" href="https://guide.amalfi.day" target="_blank" rel="noreferrer">
            <div class="guide-card__content">
              <span class="guide-card__eyebrow">guide.amalfi.day</span>
              <h3>
                Take your <span class="accent-italic">Amalfi in a Pocket</span>
              </h3>
              <p>
                Plan your perfect Amalfi Coast day with ready-to-use walks, swims, moto rides,
                and food stops — plus offline-friendly maps and simplified transport timing.
              </p>
              <span class="guide-card__cta">
                <i class="bi bi-arrow-up-right"></i> Open the guide
              </span>
            </div>
            <div class="guide-card__image" aria-hidden="true">
              <img src="/staticpages/mainpage/for-guide.webp" alt="" />
            </div>
          </a>
        </div>
        <div class="hero__tile hero__tile--small hero__tile--small-a">
          <a
            class="hero__mini hero__mini--stack"
            href={heroLinks.busPdf}
            id="bus"
            target="_blank"
            rel="noreferrer"
          >
            <i class="bi bi-bus-front hero__icon hero__icon--azure"></i>
            <strong>Bus timetables</strong>
          </a>
        </div>
        <div class="hero__tile hero__tile--small hero__tile--small-b">
          <a
            class="hero__mini hero__mini--stack"
            href={heroLinks.ferryPdf}
            id="ferry"
            target="_blank"
            rel="noreferrer"
          >
            <i class="bi bi-ticket-perforated hero__icon hero__icon--sunset"></i>
            <strong>Ferry timetables</strong>
          </a>
        </div>
        <div class="hero__tile hero__tile--bottom">
          <a class="hero__mini" href="/apartments">
            <i class="bi bi-building"></i>
            <div>
              <strong>Our apartments</strong>
              <span>Booking & Airbnb options</span>
            </div>
            <i class="bi bi-arrow-up-right"></i>
          </a>
        </div>
      </div>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <div class="section__header">
        <h2>
          Essential <span class="accent-italic">pages</span>
        </h2>
        <span class="section__subtitle">Quick guides for getting around Amalfi.</span>
      </div>
      <div class="static-grid">
        {staticPages.map((item) => (
          <a class="card static-card" href={item.href}>
            <div class="static-card__media">
              <img src={item.image} alt={item.imageAlt} loading="lazy" decoding="async" />
            </div>
            <div class="static-card__body">
              <h3>{item.title}</h3>
              <p>{item.note}</p>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <section class="section section--photos">
    <div class="container">
      <div class="section__header">
        <h2>
          <a class="section__title-link" href="/photoshootings">
            Photo <span class="accent-italic">sessions</span>
          </a>
        </h2>
        <p>
          <a class="section__subtitle-link" href="/photoshootings">
            Scroll through the latest stories and shooting concepts.
          </a>
        </p>
      </div>
      <div class="scroll" aria-label="Featured photoshoots">
        {featuredPhotoshoots.map((item, index) => (
          <a class="scroll__card" href={item.href}>
            <div
              class="scroll__media"
              data-index={index}
              style={`background-image: url(${item.image})`}
            ></div>
            <div class="scroll__overlay">
              <h3>{item.title}</h3>
              <span><i class="bi bi-geo-alt"></i> {item.location}</span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <section class="section section--news">
    <div class="container">
      <div class="section__header news__header">
        <h2>
          Amalfi <span class="accent-italic">News</span>
        </h2>
        <a class="section__subtitle-link" href="/blog">
          Fresh stories and local insights are always waiting...
        </a>
      </div>
      <div class="news-scroll" aria-label="Latest blog posts">
        {newsPosts.map((post) => (
          <a class="news-card" href={post.href}>
            <div class="news-card__media">
              {post.image ? (
                <img src={post.image} alt={post.title} loading="lazy" decoding="async" />
              ) : (
                <div class="news-card__placeholder" aria-hidden="true"></div>
              )}
            </div>
            <span class="news-card__date">{post.date}</span>
            <h3>{post.title}</h3>
          </a>
        ))}
      </div>
    </div>
  </section>

  <section class="section etsy">
    <div class="container etsy__inner">
      <div class="etsy__copy">
        <div class="section__header etsy__header">
          <h2>
            Dress to <span class="accent-italic">express</span>
          </h2>
          <span class="section__subtitle etsy__subtitle">
            Prints, presets, and handcrafted Amalfi souvenirs<br />
            <strong>coming soon</strong>
          </span>
        </div>
      </div>
      <div class="etsy__gallery" aria-label="Amalfi merch previews">
        <img
          class="etsy__photo"
          src="/merch/t-shirt-0130.webp"
          alt="Amalfi t-shirt design preview"
          loading="lazy"
          decoding="async"
        />
        <img
          class="etsy__photo"
          src="/merch/t-shirt-che-cosa-new-3.webp"
          alt="Amalfi t-shirt graphic in blue"
          loading="lazy"
          decoding="async"
        />
        <img
          class="etsy__photo"
          src="/merch/t-shirt-hastalavista-new.webp"
          alt="Amalfi t-shirt print design"
          loading="lazy"
          decoding="async"
        />
        <img
          class="etsy__photo"
          src="/merch/t-shirt-pastaparty-00-new.webp"
          alt="Amalfi pasta party t-shirt design"
          loading="lazy"
          decoding="async"
        />
      </div>
    </div>
  </section>

  <section class="prefooter">
    <div class="container prefooter__inner">
      <div class="prefooter__copy">
        <h2>Discover Your Perfect Amalfi Adventure</h2>
        <div class="prefooter__line"></div>
        <p>
          At Amalfi.day, we’re all about creating special moments just for you—whether that’s
          zipping around on a scooter, cruising on a motorboat, or getting hands-on with local
          crafts. Let’s make it unforgettable.
        </p>
        <div class="prefooter__actions">
          <a class="button" href="/contact">
            <i class="bi bi-send"></i> Send a request
          </a>
          <a class="prefooter__link" href="/experience">
            <i class="bi bi-stars"></i> Check our experiences
          </a>
        </div>
      </div>
      <div class="prefooter__media">
        <div class="prefooter__stack">
          <img
            class="prefooter__photo"
            src="/pre-footer/boat-tours-in-amalfi.webp"
            alt="Boat tours in Amalfi Coast"
            loading="lazy"
          />
          <img
            class="prefooter__photo"
            src="/pre-footer/girl-on-moto-in-amalfi-small.webp"
            alt="Amalfi scooter ride"
            loading="lazy"
          />
          <img
            class="prefooter__photo"
            src="/pre-footer/2-food-in-amalfi-good.webp"
            alt="Amalfi food experience"
            loading="lazy"
          />
        </div>
        <div class="prefooter__newsletter">
          <span>Get updates via email</span>
          <button class="button secondary" type="button">Subscribe</button>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .hero {
    padding: 6rem 0 4.5rem;
    position: relative;
    background: #ff5900;
    color: #ffffff;
    overflow: hidden;
    box-sizing: border-box;
  }

  .hero::before {
    content: '';
    position: absolute;
    left: 50%;
    top: 0;
    width: min(1200px, 140vw);
    height: min(1200px, 140vw);
    transform: translate(-50%, -50%);
    background: radial-gradient(
      circle at 50% 50%,
      rgba(255, 195, 0, 0.95) 0%,
      rgba(255, 126, 0, 0.9) 45%,
      rgba(255, 89, 0, 1) 72%
    );
    opacity: 0.95;
  }

  .hero__inner {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    gap: 2.8rem;
    align-items: center;
  }

  .hero__intro {
    text-align: center;
    max-width: 980px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 1.1rem;
    margin-top: 0.8rem;
  }

  .hero__quatrain {
    font-family: var(--font-display);
    font-size: clamp(0.81rem, 1.27vw, 1.04rem);
    line-height: 1.44;
    letter-spacing: 0.01em;
    color: rgba(255, 255, 255, 0.92);
    text-wrap: balance;
    max-width: 760px;
    margin: 0 auto;
  }

  .hero__line {
    margin: 0;
    transition: opacity 0.25s ease;
  }

  .hero__line.is-fading {
    opacity: 0.2;
  }

  .hero__logo img {
    width: min(560px, 82vw);
    height: auto;
    display: block;
    transform: scale(1.2);
    transform-origin: center;
    pointer-events: none;
  }

  .hero__logo {
    display: flex;
    justify-content: center;
    user-select: none;
    -webkit-tap-highlight-color: transparent;
  }

  .hero__quatrain,
  .hero__logo {
    cursor: pointer;
  }

  .hero__mosaic {
    display: grid;
    grid-template-columns: repeat(12, minmax(0, 1fr));
    grid-template-rows: auto auto;
    gap: 1.2rem;
    align-items: stretch;
    width: min(980px, 100%);
    margin: 0 auto;
  }

  .hero__tile {
    position: relative;
    border-radius: 26px;
    overflow: hidden;
    display: flex;
    align-items: stretch;
  }

  .hero__tile > a {
    width: 100%;
    height: 100%;
  }

  .hero__tile--primary {
    grid-column: 1 / span 8;
    grid-row: 1 / 3;
  }

  .hero__tile--small {
  }

  .hero__tile--small-a {
    grid-column: 9 / span 2;
    grid-row: 1;
  }

  .hero__tile--small-b {
    grid-column: 11 / span 2;
    grid-row: 1;
  }

  .hero__tile--bottom {
    grid-column: 9 / span 4;
    grid-row: 2;
  }

  .hero__intro :is(a, h1, h2, h3, h4, h5, h6, p, span, strong) {
    color: #ffffff;
  }

  .guide-card {
    --guide-card-image-width: clamp(120px, 22%, 160px);
    position: relative;
    border-radius: 24px;
    overflow: hidden;
    padding: 1.4rem 1.6rem;
    background: #ffffff;
    border: 1px solid rgba(26, 26, 26, 0.08);
    box-shadow: 0 18px 40px rgba(0, 0, 0, 0.18);
    min-height: 100%;
    display: grid;
    grid-template-columns: minmax(0, 1fr);
    gap: 0.8rem;
    align-items: start;
    text-decoration: none;
  }

  .guide-card:hover {
    text-decoration: none;
  }

  .guide-card__content {
    position: relative;
    z-index: 1;
    max-width: 520px;
    padding: 1.2rem 0;
  }

  .guide-card__image {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    aspect-ratio: 1 / 1;
    z-index: 0;
  }

  .guide-card__image img {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .guide-card__eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.12em;
    font-size: 0.7rem;
    font-weight: 600;
    color: rgba(26, 26, 26, 0.6);
  }

  .guide-card h3 {
    font-size: clamp(1.5rem, 3vw, 2.1rem);
    margin: 0.8rem 0;
    color: #111111;
  }

  .guide-card p {
    color: rgba(26, 26, 26, 0.7);
  }

  .guide-card__cta {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 600;
    color: #111111;
  }

  .guide-card .accent-italic {
    color: var(--color-accent);
  }

  .hero__mini {
    border-radius: 18px;
    padding: 1rem 1.2rem;
    background: #ffffff;
    border: 1px solid rgba(26, 26, 26, 0.08);
    display: flex;
    align-items: center;
    gap: 1rem;
    justify-content: space-between;
    text-decoration: none;
    height: 100%;
    color: #1a1a1a;
  }

  .hero__mini--stack {
    flex-direction: column;
    gap: 0.8rem;
    justify-content: center;
    text-align: center;
  }

  .hero__mini--stack i {
    font-size: 2rem;
  }

  .hero__mini > i {
    font-size: 2rem;
  }

  .hero__icon {
    display: inline-block;
    background-clip: text;
    -webkit-background-clip: text;
    color: transparent;
    -webkit-text-fill-color: transparent;
  }

  .hero__icon--sunset {
    background-image: var(--gradient-sunset);
  }

  .hero__icon--azure {
    background-image: var(--gradient-azure);
  }

  .hero__mini:hover {
    text-decoration: none;
  }

  .hero__mini strong {
    display: block;
    font-size: 1rem;
  }

  .hero__mini span {
    font-size: 0.85rem;
    color: rgba(26, 26, 26, 0.7);
  }

  .section__header {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    flex-wrap: nowrap;
    gap: 2rem;
    margin-bottom: 2.5rem;
  }

  .section__header h2 {
    font-size: clamp(2rem, 3vw, 3rem);
  }

  .section__title-link,
  .section__subtitle-link {
    color: inherit;
    text-decoration: none;
  }

  .section__subtitle,
  .section__subtitle-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-text-muted);
    font-weight: 500;
    border-bottom: 1px dashed transparent;
    transition: color 0.2s ease, border-color 0.2s ease, transform 0.2s ease;
    white-space: nowrap;
  }

  .section__header > .section__subtitle,
  .section__header > .section__subtitle-link {
    margin-left: auto;
    text-align: right;
  }

  .section__subtitle-link::after {
    content: '→';
    transition: transform 0.2s ease;
  }

  .section__subtitle-link:hover {
    color: var(--color-text);
    border-color: var(--color-accent);
    transform: translateX(4px);
    text-decoration: none;
  }

  .section__subtitle-link:hover::after {
    transform: translateX(4px);
  }

  .section--photos .section__title-link {
    position: relative;
    display: inline-block;
  }

  .section--photos .section__title-link::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: -6px;
    width: 0;
    height: 3px;
    background: var(--gradient-sunset);
    transition: width 0.25s ease;
  }

  .section--photos .section__title-link:hover::after {
    width: 100%;
  }

  .static-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 1.5rem;
  }

  .static-card {
    position: relative;
    overflow: hidden;
    padding: 0;
    display: flex;
    flex-direction: column;
    color: inherit;
    text-decoration: none;
  }

  .static-card:hover {
    text-decoration: none;
  }

  .static-card__media {
    width: 100%;
    aspect-ratio: 1 / 1;
    height: auto;
    overflow: hidden;
    background: var(--color-surface);
  }

  .static-card__media img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .static-card__body {
    padding: 1.4rem 1.6rem 1.6rem;
    display: flex;
    flex-direction: column;
    gap: 0.6rem;
  }

  .static-card h3 {
    margin: 0;
    font-size: 1.2rem;
  }

  .static-card p {
    margin: 0;
    color: var(--color-text-muted);
  }

  .scroll {
    display: grid;
    gap: 1.5rem;
    grid-template-columns: repeat(4, minmax(0, 1fr));
  }

  .scroll__card {
    width: 100%;
    height: 360px;
    border-radius: var(--radius-lg);
    position: relative;
    overflow: hidden;
    box-shadow: var(--shadow-soft);
  }

  .scroll__media {
    position: absolute;
    inset: 0;
    background-color: rgba(16, 16, 16, 0.35);
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  .scroll__overlay {
    position: absolute;
    inset: auto 0 0;
    padding: 1.5rem;
    background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.6) 100%);
    color: #ffffff;
  }

  .scroll__overlay span {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
  }

  .section--news {
    background: linear-gradient(120deg, rgba(1, 98, 255, 0.06), rgba(255, 195, 0, 0.08));
  }

  .news__header {
    align-items: flex-end;
  }

  .news-scroll {
    display: grid;
    grid-template-columns: repeat(4, minmax(0, 1fr));
    gap: 1.5rem;
  }

  .news-card {
    background: var(--color-card);
    border-radius: var(--radius-lg);
    border: 1px solid var(--color-border);
    box-shadow: var(--shadow-soft);
    padding: 1rem;
    display: flex;
    flex-direction: column;
    gap: 0.7rem;
    color: inherit;
    text-decoration: none;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .news-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lift);
    text-decoration: none;
  }

  .news-card__media {
    height: 180px;
    border-radius: 14px;
    overflow: hidden;
    background: var(--color-surface);
    position: relative;
  }

  .news-card__media img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .news-card__placeholder {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(255, 89, 0, 0.18), rgba(1, 98, 255, 0.2));
  }

  .news-card__date {
    font-family: var(--font-mono);
    font-size: 0.68rem;
    letter-spacing: 0.16em;
    text-transform: uppercase;
    color: var(--color-text-muted);
  }

  .news-card h3 {
    margin: 0;
    font-size: 1.05rem;
    line-height: 1.35;
  }

  .etsy {
    background: var(--color-card);
  }

  .etsy__inner {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 2.5rem;
  }

  .etsy__header {
    margin-bottom: 0;
    width: 100%;
  }

  .etsy__subtitle {
    margin-left: auto;
    text-align: right;
  }

  .etsy__subtitle::after {
    content: '→';
    transition: transform 0.2s ease;
  }

  .etsy__subtitle:hover {
    color: var(--color-text);
    border-color: var(--color-accent);
    transform: translateX(4px);
  }

  .etsy__subtitle:hover::after {
    transform: translateX(4px);
  }

  .accent-orange {
    color: var(--color-accent);
  }

  .etsy__note {
    margin-bottom: 0;
  }

  .etsy__gallery {
    width: 100%;
    display: grid;
    grid-template-columns: repeat(4, minmax(0, 1fr));
    gap: 1.2rem;
  }

  .etsy__photo {
    width: 100%;
    height: 260px;
    object-fit: cover;
    display: block;
    transform: scale(1);
    transition: transform 200ms ease;
  }

  .etsy__photo:hover {
    transform: scale(1.06);
  }

  .prefooter {
    padding: 4rem 0 5rem;
    background: var(--color-bg);
  }

  .prefooter__inner {
    display: grid;
    grid-template-columns: 1.2fr 0.8fr;
    gap: 3rem;
    align-items: start;
  }

  .prefooter__line {
    height: 3px;
    width: 120px;
    background: var(--gradient-sunset);
    border-radius: 999px;
    margin: 1rem 0 1.5rem;
