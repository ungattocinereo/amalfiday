    font-family: var(--font-mono);
    text-transform: uppercase;
    letter-spacing: 0.24em;
    font-size: 0.7rem;
    color: var(--color-text-muted);
    margin-bottom: 1rem;
  }

  .shoot-pan {
    position: relative;
    width: 100vw;
    margin-left: calc(50% - 50vw);
  }

