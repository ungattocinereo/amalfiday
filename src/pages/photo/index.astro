---
import BaseLayout from '../../layouts/BaseLayout.astro'
import { featuredPhotoshoots } from '../../data/site'
---

<BaseLayout title="Photoshoots — Amalfi.Day">
  <section class="section">
    <div class="container">
      <h1>
        <i class="bi bi-camera2"></i> Photo <span class="accent-italic">stories</span>
      </h1>
      <p>Every session is a narrative. Browse recent shoots and curated highlights.</p>
      <div class="grid">
        {featuredPhotoshoots.map((item) => (
          <article class="card">
            <div class="media"></div>
            <div class="content">
              <h3>{item.title}</h3>
              <p>{item.location}</p>
              <a href={item.href}>View report →</a>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  h1 {
    font-size: clamp(2.4rem, 4vw, 3.8rem);
    display: flex;
    align-items: center;
    gap: 0.6rem;
  }

  .grid {
    margin-top: 2rem;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 1.5rem;
  }

  .media {
    height: 180px;
    background: linear-gradient(135deg, rgba(255, 89, 0, 0.2), rgba(0, 156, 255, 0.2));
  }

  .content {
    padding: 1.4rem;
  }
</style>
