  <script is:inline>
    ;(() => {
      /* â”€â”€ Hero slideshow â”€â”€ */
      const slides = document.querySelectorAll('.ct-hero__slide')
      const dots = document.querySelectorAll('.ct-hero__dot')
      if (slides.length) {
        let current = 0
        const DURATION = 6000

        function go(next) {
          slides[current].classList.remove('is-active')
          dots[current].classList.remove('is-active')
          current = next
          slides[current].classList.add('is-active')
          dots[current].classList.add('is-active')
        }

        let timer = setInterval(() => go((current + 1) % slides.length), DURATION)

        dots.forEach((dot) => {
          dot.addEventListener('click', () => {
            clearInterval(timer)
            go(Number(dot.dataset.slide))
            timer = setInterval(() => go((current + 1) % slides.length), DURATION)
          })
        })
      }

      /* â”€â”€ Lightbox â”€â”€ */
      const lightbox = document.getElementById('ctLightbox')
      if (lightbox) {
        const img = lightbox.querySelector('.ct-lightbox__img')
        const prevBtn = lightbox.querySelector('.ct-lightbox__nav--prev')
        const nextBtn = lightbox.querySelector('.ct-lightbox__nav--next')
        const closeBtn = lightbox.querySelector('.ct-lightbox__close')
        const backdrop = lightbox.querySelector('.ct-lightbox__backdrop')
        const currentEl = lightbox.querySelector('[data-lb-current]')
        const totalEl = lightbox.querySelector('[data-lb-total]')

        const triggers = Array.from(document.querySelectorAll('[data-lightbox-trigger]'))
        const srcs = []
        triggers.forEach(el => {
          const imgEl = el.tagName === 'IMG' ? el : el.querySelector('img')
          if (imgEl) srcs.push({ src: imgEl.src, alt: imgEl.alt || '' })
        })

        let currentIndex = 0
        const show = (index) => {
          currentIndex = (index + srcs.length) % srcs.length
          img.src = srcs[currentIndex].src
          img.alt = srcs[currentIndex].alt
          currentEl.textContent = currentIndex + 1
          totalEl.textContent = srcs.length
        }
        const open = (index) => {
          show(index)
          lightbox.classList.add('is-open')
          lightbox.setAttribute('aria-hidden', 'false')
          document.body.style.overflow = 'hidden'
        }
        const close = () => {
          lightbox.classList.remove('is-open')
          lightbox.setAttribute('aria-hidden', 'true')
          document.body.style.overflow = ''
        }

        triggers.forEach((el, i) => {
          el.style.cursor = 'zoom-in'
          el.addEventListener('click', (e) => {
            e.preventDefault()
            open(i)
          })
        })

        closeBtn.addEventListener('click', close)
        backdrop.addEventListener('click', close)
        prevBtn.addEventListener('click', () => show(currentIndex - 1))
        nextBtn.addEventListener('click', () => show(currentIndex + 1))

        document.addEventListener('keydown', (e) => {
          if (!lightbox.classList.contains('is-open')) return
          if (e.key === 'Escape') close()
          if (e.key === 'ArrowLeft') show(currentIndex - 1)
          if (e.key === 'ArrowRight') show(currentIndex + 1)
        })

        let touchStartX = 0
        lightbox.addEventListener('touchstart', (e) => { touchStartX = e.changedTouches[0].clientX }, { passive: true })
        lightbox.addEventListener('touchend', (e) => {
          const diff = e.changedTouches[0].clientX - touchStartX
          if (Math.abs(diff) > 50) {
            if (diff > 0) show(currentIndex - 1)
            else show(currentIndex + 1)
          }
        })
      }

      /* â”€â”€ Scroll-triggered fade-in â”€â”€ */
      const obs = new IntersectionObserver(
        (entries) => entries.forEach((e) => { if (e.isIntersecting) { e.target.classList.add('is-visible'); obs.unobserve(e.target) } }),
        { threshold: 0.15 }
      )
      document.querySelectorAll('.ct-stop, .ct-mosaic__item, .ct-price-card, .ct-route__stop').forEach((el) => obs.observe(el))

      /* â•â•â• Tour Request Forms â•â•â• */
      const MONTHS = ['January','February','March','April','May','June','July','August','September','October','November','December']

      function initCalendar(calEl, dateInput) {
        const monthYearEl = calEl.querySelector('.ct-calendar__month-year')
        const daysEl = calEl.querySelector('.ct-calendar__days')
        const prevBtn = calEl.querySelector('[data-cal-prev]')
        const nextBtn = calEl.querySelector('[data-cal-next]')
        const today = new Date()
        let viewYear = today.getFullYear()
        let viewMonth = today.getMonth()

        function render() {
          monthYearEl.textContent = `${MONTHS[viewMonth]} ${viewYear}`
          daysEl.innerHTML = ''
          const firstDay = new Date(viewYear, viewMonth, 1).getDay()
          const offset = (firstDay + 6) % 7
          const daysInMonth = new Date(viewYear, viewMonth + 1, 0).getDate()

          for (let i = 0; i < offset; i++) {
            const empty = document.createElement('span')
            empty.className = 'ct-calendar__day ct-calendar__day--empty'
            daysEl.appendChild(empty)
          }

          for (let d = 1; d <= daysInMonth; d++) {
            const btn = document.createElement('button')
            btn.type = 'button'
            btn.className = 'ct-calendar__day'
            btn.textContent = d
            const cellDate = new Date(viewYear, viewMonth, d)
            if (cellDate < new Date(today.getFullYear(), today.getMonth(), today.getDate())) {
              btn.disabled = true
              btn.classList.add('ct-calendar__day--past')
            }
            btn.addEventListener('click', () => {
              const mm = String(viewMonth + 1).padStart(2, '0')
              const dd = String(d).padStart(2, '0')
              dateInput.value = `${dd}/${mm}/${viewYear}`
              calEl.classList.remove('is-open')
              calEl.setAttribute('aria-hidden', 'true')
            })
            daysEl.appendChild(btn)
          }
        }

        prevBtn.addEventListener('click', () => {
          viewMonth--
          if (viewMonth < 0) { viewMonth = 11; viewYear-- }
          render()
        })
        nextBtn.addEventListener('click', () => {
          viewMonth++
          if (viewMonth > 11) { viewMonth = 0; viewYear++ }
          render()
        })

        render()
      }

      async function fetchIpMeta() {
        const endpoints = ['https://ipapi.co/json/', 'https://ipwho.is/']
        for (const url of endpoints) {
          try {
            const ctrl = new AbortController()
            const tid = setTimeout(() => ctrl.abort(), 1800)
            const r = await fetch(url, { method: 'GET', headers: { Accept: 'application/json' }, cache: 'no-store', signal: ctrl.signal })
            clearTimeout(tid)
            if (!r.ok) continue
            const d = await r.json()
            const ip = d?.ip || ''
            const city = d?.city || ''
            const region = d?.region || d?.region_name || ''
            const country = d?.country_name || d?.country || ''
            const lat = d?.latitude ?? d?.lat ?? ''
            const lon = d?.longitude ?? d?.lon ?? ''
            const location = [city, region, country].filter(Boolean).join(', ')
            const coords = lat !== '' && lon !== '' ? `${lat}, ${lon}` : ''
            if (ip || location || coords) return { ip, location, coords }
          } catch (_) {}
        }
        return { ip: '', location: '', coords: '' }
      }

      document.querySelectorAll('.ct-price-card').forEach((card) => {
        const defaultPanel = card.querySelector('.ct-price-card__default')
        const formPanel = card.querySelector('.ct-tour-form')
        const successPanel = card.querySelector('.ct-tour-form__success')
        const triggerBtn = card.querySelector('[data-tour-trigger]')
        const backBtn = card.querySelector('.ct-tour-form__back')
        const dateInput = card.querySelector('.ct-tour-form__date-input')
        const dateToggle = card.querySelector('.ct-tour-form__date-toggle')
        const calEl = card.querySelector('.ct-calendar')
        const submitBtn = card.querySelector('.ct-tour-form__submit')
        const statusEl = card.querySelector('.ct-tour-form__status')
        const tourName = card.dataset.tourName
        const tourPrice = card.dataset.tourPrice

        if (!formPanel || !defaultPanel) return

        initCalendar(calEl, dateInput)

        triggerBtn?.addEventListener('click', () => {
          card.classList.add('is-form-active')
          defaultPanel.setAttribute('aria-hidden', 'true')
          formPanel.setAttribute('aria-hidden', 'false')
          formPanel.querySelector('input[name="contact"]')?.focus()
        })

        backBtn?.addEventListener('click', () => {
          card.classList.remove('is-form-active')
          defaultPanel.setAttribute('aria-hidden', 'false')
          formPanel.setAttribute('aria-hidden', 'true')
          calEl.classList.remove('is-open')
          calEl.setAttribute('aria-hidden', 'true')
        })

        dateToggle?.addEventListener('click', () => {
          const isOpen = calEl.classList.contains('is-open')
          calEl.classList.toggle('is-open', !isOpen)
          calEl.setAttribute('aria-hidden', isOpen ? 'true' : 'false')
        })

        dateInput?.addEventListener('click', () => {
          const isOpen = calEl.classList.contains('is-open')
          calEl.classList.toggle('is-open', !isOpen)
          calEl.setAttribute('aria-hidden', isOpen ? 'true' : 'false')
        })

        document.addEventListener('click', (e) => {
          if (!calEl.contains(e.target) && e.target !== dateToggle && e.target !== dateInput && !dateToggle?.contains(e.target)) {
            calEl.classList.remove('is-open')
            calEl.setAttribute('aria-hidden', 'true')
          }
        })

        formPanel.addEventListener('submit', async (e) => {
          e.preventDefault()
          const contactInput = formPanel.querySelector('input[name="contact"]')
          const contactVal = contactInput?.value?.trim() || ''

          if (!contactVal) {
            contactInput?.focus()
            statusEl.textContent = 'Please enter your contact'
            statusEl.dataset.state = 'error'
            return
          }

          const emailRe = /^[^\s@]+@[^\s@]+\.[^\s@]+$/
          const phoneDigits = contactVal.replace(/\D/g, '')
          if (!emailRe.test(contactVal) && phoneDigits.length < 7) {
            contactInput?.focus()
            statusEl.textContent = 'Enter a valid email or phone'
            statusEl.dataset.state = 'error'
            return
          }

          submitBtn.disabled = true
          statusEl.textContent = 'Sending...'
          statusEl.dataset.state = ''

          const ipMeta = await fetchIpMeta()
          const payload = {
            name: 'â€”',
            contact: contactVal,
            dates: dateInput?.value || 'â€”',
            service: `Car Tour: ${tourName}`,
            message: `ğŸš— Tour: ${tourName}\nğŸ’° Price: ${tourPrice}` + (dateInput?.value ? `\nğŸ“… Preferred date: ${dateInput.value}` : ''),
            ip: ipMeta.ip,
            location: ipMeta.location,
            coords: ipMeta.coords,
            language: navigator.language || '',
            timezone: Intl.DateTimeFormat().resolvedOptions().timeZone || '',
            userAgent: navigator.userAgent || '',
            referrer: document.referrer || window.location.href || '',
            page: window.location.href || '',
          }

          try {
            const r = await fetch('/hooks/send-telegram-amalfiday', {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify(payload),
            })
            let result
            try { result = await r.json() } catch (_) { throw new Error('Server error') }
            if (!r.ok || result.error) throw new Error(result.error || 'Request failed')

            card.classList.remove('is-form-active')
            card.classList.add('is-success')
            formPanel.setAttribute('aria-hidden', 'true')
            successPanel.setAttribute('aria-hidden', 'false')
          } catch (err) {
            statusEl.textContent = 'Something went wrong. Try again.'
            statusEl.dataset.state = 'error'
          } finally {
            submitBtn.disabled = false
          }
        })
      })
    })()
