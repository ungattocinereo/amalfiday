    .ct-mosaic__item--1,
    .ct-mosaic__item--5 {
      grid-column: span 2;
      grid-row: span 1;
    }

    .ct-mosaic--tramonti .ct-mosaic__item--2,
    .ct-mosaic--tramonti .ct-mosaic__item--7 {
      grid-column: span 2;
      grid-row: span 1;
    }

