        const defaultPanel = card.querySelector('.sc-price-card__default')
        const formPanel = card.querySelector('.sc-tour-form')
        const successPanel = card.querySelector('.sc-tour-form__success')
        const triggerBtn = card.querySelector('[data-tour-trigger]')
        const backBtn = card.querySelector('.sc-tour-form__back')
        const dateInput = card.querySelector('.sc-tour-form__date-input')
        const dateToggle = card.querySelector('.sc-tour-form__date-toggle')
        const calEl = card.querySelector('.sc-calendar')
        const submitBtn = card.querySelector('.sc-tour-form__submit')
        const statusEl = card.querySelector('.sc-tour-form__status')
        const tourName = card.dataset.tourName
        const tourPrice = card.dataset.tourPrice

        if (!formPanel || !defaultPanel) return

        initCalendar(calEl, dateInput)

        triggerBtn?.addEventListener('click', () => {
          card.classList.add('is-form-active')
          defaultPanel.setAttribute('aria-hidden', 'true')
