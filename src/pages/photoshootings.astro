    pointer-events: none;
  }

  .xp-hero__content {
    position: relative;
    z-index: 2;
    width: 100%;
    padding-bottom: clamp(2.5rem, 5vh, 4.5rem);
  }

  .xp-hero__grid {
    display: grid;
    grid-template-columns: 1fr auto;
    gap: 3rem;
    align-items: end;
  }

  .xp-hero__eyebrow {
    display: inline-block;
    font-family: var(--font-mono);
    text-transform: uppercase;
    letter-spacing: 0.25em;
    font-size: 0.65rem;
    color: rgba(255, 255, 255, 0.6);
