    </div>
  </section>
</BaseLayout>

<style>
  /* ===== HERO — Full-viewport cinematic ===== */

  .xp-hero {
    position: relative;
    min-height: 100vh;
    min-height: 100dvh;
    display: flex;
    align-items: flex-end;
    overflow: hidden;
    background: #0a0a0a;
    color: #ffffff;
  }

  .xp-hero__slides {
    position: absolute;
    inset: -2px;
    z-index: 0;
    overflow: hidden;
  }

  .xp-hero__slide {
    position: absolute;
    inset: 0;
    opacity: 0;
    transition: opacity 1.2s cubic-bezier(0.4, 0, 0.2, 1);
    backface-visibility: hidden;
  }

  .xp-hero__slide.is-active {
    opacity: 1;
  }

  .xp-hero__slide img {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transform: scale(1.01);
    backface-visibility: hidden;
  }

  .xp-hero__slide.is-active img {
    animation: xp-ken-burns 6.5s cubic-bezier(0.25, 0, 0.4, 1) forwards;
  }

  @keyframes xp-ken-burns {
    from { transform: scale(1.01); }
    to { transform: scale(1.06); }
  }

  .xp-hero__vignette {
