    gap: 0.6rem;
  }

  .xp-hero__dot {
    background: none;
    border: none;
    padding: 0;
    cursor: pointer;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.4rem;
  }

  .xp-hero__dot-label {
    font-family: var(--font-mono);
    font-size: 0.6rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: rgba(255, 255, 255, 0.9);
    opacity: 0.4;
    transition: opacity 0.4s ease;
  }

  .xp-hero__dot.is-active .xp-hero__dot-label {
    opacity: 1;
  }

  .xp-hero__dot-bar {
    width: 36px;
    height: 2px;
    background: rgba(255, 255, 255, 0.15);
    border-radius: 2px;
    overflow: hidden;
  }

  .xp-hero__dot-fill {
    display: block;
    width: 100%;
    height: 100%;
    background: #ff5900;
    border-radius: 2px;
    transform-origin: left center;
    transform: scaleX(0);
  }

  .xp-hero__dot.is-active .xp-hero__dot-fill {
    animation: xp-fill-bar 6s linear forwards;
  }

  @keyframes xp-fill-bar {
    from { transform: scaleX(0); }
    to { transform: scaleX(1); }
  }

  .xp-hero__scroll-hint {
    position: absolute;
    bottom: clamp(1rem, 2.5vh, 2rem);
    left: 50%;
    transform: translateX(-50%);
    z-index: 3;
    opacity: 0;
    animation: xp-fade-up 0.6s 1.2s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }

  .xp-hero__scroll-hint span {
    display: block;
    width: 1px;
    height: 32px;
    background: linear-gradient(to bottom, rgba(255, 255, 255, 0.5), transparent);
    animation: xp-scroll-pulse 2s ease-in-out infinite;
  }

  @keyframes xp-scroll-pulse {
    0%, 100% { opacity: 0.4; transform: scaleY(1); }
    50% { opacity: 1; transform: scaleY(1.3); }
  }

  @keyframes xp-fade-up {
    from {
      opacity: 0;
      transform: translateY(18px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 768px) {
    .xp-hero__grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .xp-hero__aside {
      align-items: flex-start;
    }

    .xp-hero__tags {
      justify-content: flex-start;
      max-width: none;
    }

    .xp-hero__title {
      font-size: clamp(2.4rem, 10vw, 3.8rem);
    }

    .xp-hero__progress {
      align-self: flex-start;
    }
  }

  /* ── Category header ── */
  .cat-header {
    margin-bottom: 3rem;
  }

  .cat-header h1 {
    font-size: clamp(2.2rem, 4vw, 3.4rem);
    margin-bottom: 0.8rem;
  }

  .cat-header__desc {
    max-width: 640px;
    font-size: 1.05rem;
    line-height: 1.75;
    color: var(--color-text-muted);
  }

  /* ── Shoot card grid ── */
  .shoot-grid {
    display: grid;
    gap: 1.5rem;
    grid-template-columns: repeat(4, minmax(0, 1fr));
  }

  .shoot-grid--couple {
    grid-template-columns: repeat(2, minmax(0, 1fr));
  }

  .shoot-card {
    position: relative;
    overflow: hidden;
    border-radius: var(--radius-lg);
    height: 440px;
    display: block;
    text-decoration: none;
    color: #ffffff;
    transition: transform 0.45s cubic-bezier(0.16, 1, 0.3, 1), box-shadow 0.45s ease;
  }

  .shoot-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.25);
    text-decoration: none;
  }

  .shoot-card--wide {
    height: 480px;
  }

  /* --- Media: dual image with hover swap --- */
  .shoot-card__media {
    position: absolute;
    inset: 0;
    background-color: #111;
  }

  .shoot-card__img {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: top center;
