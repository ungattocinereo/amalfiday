            <div class="shoot-card__overlay">
              <div class="shoot-card__location">
                <i class="bi bi-geo-alt"></i> {item.location}
              </div>
              <h3 class="shoot-card__title">{item.title}</h3>
              <p class="shoot-card__desc">{item.desc}</p>
              <span class="shoot-card__cta">
                View story <i class="bi bi-arrow-right"></i>
              </span>
            </div>
          </a>
        ))}
