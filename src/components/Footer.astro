---
import { footerLinks, socialLinks } from '../data/site'
import LogoMark from './LogoMark.astro'
---
<footer class="footer">
  <div class="container footer__inner">
    <div class="footer__brand">
      <LogoMark class="footer__logo" />
      <div class="footer__social">
        {socialLinks
          .filter((item) => ['Instagram', 'Facebook', 'Twitter'].includes(item.label))
          .map((item) => (
            <a class="footer__social-link" href={item.href} target="_blank" rel="noreferrer">
              {item.label === 'Instagram' && <i class="bi bi-instagram"></i>}
              {item.label === 'Facebook' && <i class="bi bi-facebook"></i>}
              {item.label === 'Twitter' && <i class="bi bi-twitter-x"></i>}
            </a>
          ))}
      </div>
    </div>

    <div class="footer__column">
      {footerLinks.transport.map((item) => (
        <a
          class="footer__link"
          href={item.href}
          target={item.external ? '_blank' : undefined}
          rel={item.external ? 'noreferrer' : undefined}
        >
          {(item.label === 'Ferry timetables' || item.label === 'Bus timetables') && (
            <i class="bi bi-download footer__icon"></i>
          )}
          {item.label === 'Airport shuttle' && (
            <i class="bi bi-airplane footer__icon"></i>
          )}
          {item.label === "Greg's guide" && (
            <i class="bi bi-map footer__icon"></i>
          )}
          {item.label}
        </a>
      ))}
    </div>

    <div class="footer__column">
      {footerLinks.apartments.map((item) => (
        <a
          class="footer__link"
          href={item.href}
          target={item.external ? '_blank' : undefined}
          rel={item.external ? 'noreferrer' : undefined}
        >
          {item.label === 'Booking.com' && (
            <i class="bi bi-building footer__icon"></i>
          )}
          {item.label === 'Airbnb' && (
            <i class="bi bi-house-door footer__icon"></i>
          )}
          {item.label === 'Apartments overview' && (
            <i class="bi bi-house-heart footer__icon"></i>
          )}
          {item.label}
        </a>
      ))}
    </div>

    <div class="footer__column">
      {footerLinks.info.map((item) => (
        <a class="footer__link" href={item.href}>
          {item.label === 'How to get here' && (
            <i class="bi bi-geo-alt footer__icon"></i>
          )}
          {item.label === 'What to do' && (
            <i class="bi bi-stars footer__icon"></i>
          )}
          {item.label === 'Parking tips' && (
            <i class="bi bi-p-circle footer__icon"></i>
          )}
          {item.label === 'Beach reviews' && (
            <i class="bi bi-umbrella footer__icon"></i>
          )}
          {item.label}
        </a>
      ))}
    </div>

    <div class="footer__column">
      {footerLinks.blog.map((item) => (
        <a
          class="footer__link"
          href={item.href}
          data-bookmark={item.action === 'bookmark' ? 'true' : undefined}
        >
          {item.label === 'Latest post in blog' && (
            <i class="bi bi-newspaper footer__icon"></i>
          )}
          {item.label === 'Random blog post' && (
            <i class="bi bi-shuffle footer__icon"></i>
          )}
          {item.label === 'Add to bookmarks' && (
            <i class="bi bi-bookmark-plus footer__icon"></i>
          )}
          {item.label}
        </a>
      ))}
    </div>
  </div>
  <div class="footer__bottom">
    <div class="container footer__bottom-inner">
      <span class="footer__legal">
        © 2014-{new Date().getFullYear()} CristallPont S.R.L. / P.IVA: 06863730650 /
      </span>
      <div class="footer__meta">
        <a class="footer__policy" href="/privacy">Privacy Policy</a>
        <span class="footer__divider" aria-hidden="true">•</span>
        <span class="footer__credit">
          Design & Developement Gregory '<a
            class="footer__credit-link"
            href="https://cinereo.it"
            target="_blank"
            rel="noreferrer"
          >Cinereo</a>' Day
        </span>
      </div>
    </div>
  </div>
</footer>

<script is:inline>
  const bookmarkLink = document.querySelector('[data-bookmark="true"]')
  bookmarkLink?.addEventListener('click', (event) => {
    event.preventDefault()
    const url = window.location.origin
    const title = document.title

    if (window.sidebar && window.sidebar.addPanel) {
      window.sidebar.addPanel(title, url, '')
      return
    }

    if (window.external && 'AddFavorite' in window.external) {
      window.external.AddFavorite(url, title)
      return
    }

    alert('Press Ctrl+D (Windows) or ⌘+D (Mac) to bookmark this page.')
  })
</script>

<style>
  .footer {
    padding: 4rem 0 0;
    background: var(--color-bg);
    border-top: 1px solid var(--color-border);
  }

  .footer__inner {
    display: grid;
    gap: 2.5rem;
    grid-template-columns: 1.2fr repeat(4, 1fr);
    align-items: start;
  }

  .footer__logo {
    height: 56px;
    width: auto;
    margin-bottom: 1.5rem;
    color: var(--color-text);
  }

  [data-theme='night'] .footer__logo {
    color: #ffffff;
  }

  .footer__social {
    display: flex;
    gap: 0.8rem;
  }

  .footer__social-link {
    width: 44px;
    height: 44px;
    border-radius: 50%;
    border: 1px solid var(--color-border);
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    color: var(--color-text);
  }

  .footer__column {
    display: flex;
    flex-direction: column;
    gap: 0.8rem;
  }

  .footer__link {
    display: flex;
    gap: 0.6rem;
    align-items: center;
    color: var(--color-text);
    font-size: 0.95rem;
    font-weight: 500;
    border-bottom: 1px solid var(--color-border);
    padding-bottom: 0.4rem;
  }

  .footer__icon {
    font-size: 0.85rem;
    color: var(--color-text-muted);
  }

  .footer__bottom {
    margin-top: 3rem;
    padding: 1.5rem 0;
    border-top: 1px solid var(--color-border);
    color: var(--color-text-muted);
    font-size: 0.85rem;
  }

  .footer__bottom-inner {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .footer__meta {
    display: flex;
    align-items: center;
    gap: 0.7rem;
    margin-left: auto;
    text-align: right;
  }

  .footer__divider {
    color: var(--color-text-muted);
  }

  .footer__credit {
    font-family: var(--font-mono);
    letter-spacing: 0.02em;
  }

  .footer__policy,
  .footer__credit-link {
    text-decoration: underline;
    text-underline-offset: 3px;
  }

  .footer__bottom a {
    color: inherit;
  }

  @media (max-width: 1100px) {
    .footer__inner {
      grid-template-columns: 1fr 1fr;
    }
  }

  @media (max-width: 720px) {
    .footer__bottom-inner {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.4rem;
    }

    .footer__meta {
      margin-left: 0;
      flex-direction: column;
      align-items: flex-start;
      text-align: left;
      gap: 0.4rem;
    }

    .footer__divider {
      display: none;
    }
  }

  @media (max-width: 640px) {
    .footer__inner {
      grid-template-columns: 1fr;
    }
  }
</style>
