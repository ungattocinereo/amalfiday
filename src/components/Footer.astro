---
import { footerLinks, featuredPhotoshoots, socialLinks } from '../data/site'
---
<footer class="footer">
  <div class="container footer__inner">
    <div class="footer__brand">
      <img class="logo--dark" src="/brand/logo-dark.svg" alt="Amalfi.Day" />
      <img class="logo--light" src="/brand/logo-light.svg" alt="Amalfi.Day" />
      <div class="footer__social">
        {socialLinks
          .filter((item) => ['Instagram', 'Facebook', 'Twitter'].includes(item.label))
          .map((item) => (
            <a class="footer__social-link" href={item.href} target="_blank" rel="noreferrer">
              {item.label === 'Instagram' && <i class="bi bi-instagram"></i>}
              {item.label === 'Facebook' && <i class="bi bi-facebook"></i>}
              {item.label === 'Twitter' && <i class="bi bi-twitter-x"></i>}
            </a>
          ))}
      </div>
    </div>

    <div class="footer__column">
      {footerLinks.transport.map((item) => (
        <a
          class="footer__link"
          href={item.href}
          target={item.external ? '_blank' : undefined}
          rel={item.external ? 'noreferrer' : undefined}
        >
          <i class="bi bi-arrow-down-right footer__icon"></i>
          {item.label}
        </a>
      ))}
    </div>

    <div class="footer__column">
      {footerLinks.apartments.map((item) => (
        <a
          class="footer__link"
          href={item.href}
          target={item.external ? '_blank' : undefined}
          rel={item.external ? 'noreferrer' : undefined}
        >
          <i class="bi bi-house-heart footer__icon"></i>
          {item.label}
        </a>
      ))}
    </div>

    <div class="footer__column">
      {footerLinks.info.map((item) => (
        <a class="footer__link" href={item.href}>
          <i class="bi bi-compass footer__icon"></i>
          {item.label}
        </a>
      ))}
    </div>

    <div class="footer__column">
      {featuredPhotoshoots.map((item) => (
        <a class="footer__link" href={item.href}>
          <i class="bi bi-camera footer__icon"></i>
          {item.title}
        </a>
      ))}
    </div>
  </div>
  <div class="footer__bottom">
    <div class="container">
      <span>
        Â© 2014-{new Date().getFullYear()} CrystalPont S.R.L. / P.IVA: 06863730650 /
        <a href="/privacy"> Privacy Policy</a>
      </span>
    </div>
  </div>
</footer>

<style>
  .footer {
    padding: 4rem 0 0;
    background: var(--color-bg);
    border-top: 1px solid var(--color-border);
  }

  .footer__inner {
    display: grid;
    gap: 2.5rem;
    grid-template-columns: 1.2fr repeat(4, 1fr);
    align-items: start;
  }

  .footer__brand img {
    height: 56px;
    margin-bottom: 1.5rem;
  }

  .footer__brand .logo--light {
    display: none;
  }

  [data-theme='night'] .footer__brand .logo--dark {
    display: none;
  }

  [data-theme='night'] .footer__brand .logo--light {
    display: block;
  }

  .footer__social {
    display: flex;
    gap: 0.8rem;
  }

  .footer__social-link {
    width: 44px;
    height: 44px;
    border-radius: 50%;
    border: 1px solid var(--color-border);
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    color: var(--color-text);
  }

  .footer__column {
    display: flex;
    flex-direction: column;
    gap: 0.8rem;
  }

  .footer__link {
    display: flex;
    gap: 0.6rem;
    align-items: center;
    color: var(--color-text);
    font-size: 0.95rem;
    font-weight: 500;
    border-bottom: 1px solid var(--color-border);
    padding-bottom: 0.4rem;
  }

  .footer__icon {
    font-size: 0.85rem;
    color: var(--color-text-muted);
  }

  .footer__bottom {
    margin-top: 3rem;
    padding: 1.5rem 0;
    border-top: 1px solid var(--color-border);
    color: var(--color-text-muted);
    font-size: 0.85rem;
  }

  .footer__bottom a {
    color: inherit;
  }

  @media (max-width: 1100px) {
    .footer__inner {
      grid-template-columns: 1fr 1fr;
    }
  }

  @media (max-width: 640px) {
    .footer__inner {
      grid-template-columns: 1fr;
    }
  }
</style>
