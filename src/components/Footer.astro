---
import { footerLinks, socialLinks } from '../data/site'
---
<footer class="footer">
  <div class="container footer__inner">
    <div class="footer__brand">
      <div class="footer__logo-wrap" role="img" aria-label="Amalfi Day logo">
        <img
          class="footer__logo footer__logo--light"
          src="/brand/logo-color-black.svg"
          alt=""
          aria-hidden="true"
          loading="lazy"
        />
        <img
          class="footer__logo footer__logo--dark"
          src="/brand/logo-color-white.svg"
          alt=""
          aria-hidden="true"
          loading="lazy"
        />
      </div>
      <div class="footer__social">
        {socialLinks
          .filter((item) => ['Instagram', 'Facebook', 'Twitter'].includes(item.label))
          .map((item) => (
            <a
              class={`footer__social-link ${
                item.label === 'Instagram'
                  ? 'footer__social-link--instagram'
                  : item.label === 'Facebook'
                    ? 'footer__social-link--facebook'
                    : 'footer__social-link--twitter'
              }`}
              href={item.href}
              target="_blank"
              rel="noreferrer"
            >
              {item.label === 'Instagram' && <i class="bi bi-instagram"></i>}
              {item.label === 'Facebook' && <i class="bi bi-facebook"></i>}
              {item.label === 'Twitter' && <i class="bi bi-twitter-x"></i>}
            </a>
          ))}
      </div>
    </div>

    <div class="footer__column">
      {footerLinks.transport.map((item) => (
        <a
          class={`footer__link ${item.label === "Greg's guide" ? 'footer__link--nowrap' : ''}`}
          href={item.href}
          target={item.external ? '_blank' : undefined}
          rel={item.external ? 'noreferrer' : undefined}
        >
          {(item.label === 'Ferry timetables' || item.label === 'Bus timetables') && (
            <i class="bi bi-download footer__icon"></i>
          )}
          {item.label === 'Airport shuttle' && (
            <i class="bi bi-airplane footer__icon"></i>
          )}
          {item.label === 'All public transport' && (
            <i class="bi bi-map footer__icon"></i>
          )}
          {item.label}
        </a>
      ))}
    </div>

    <div class="footer__column">
      {footerLinks.apartments.map((item) => (
        <a
          class="footer__link"
          href={item.href}
          target={item.external ? '_blank' : undefined}
          rel={item.external ? 'noreferrer' : undefined}
        >
          {item.label === 'Booking.com' && (
            <img
              class="footer__icon footer__icon--img"
              src="/brand/booking.svg"
              alt=""
              aria-hidden="true"
              loading="lazy"
            />
          )}
          {item.label === 'AirBnb.com' && (
            <i class="bi bi-house-door footer__icon" aria-hidden="true"></i>
          )}
          {item.label === 'Apartment overview' && (
            <i class="bi bi-house-heart footer__icon"></i>
          )}
          {item.label === "Greg's guide" && (
            <i class="bi bi-signpost-split footer__icon"></i>
          )}
          {item.label}
        </a>
      ))}
    </div>

    <div class="footer__column">
      {footerLinks.info.map((item) => (
        <a class="footer__link" href={item.href}>
          {item.label === 'What to do' && (
            <i class="bi bi-stars footer__icon"></i>
          )}
          {item.label === 'Parking tips' && (
            <i class="bi bi-p-circle footer__icon"></i>
          )}
          {item.label === 'Beach reviews' && (
            <i class="bi bi-umbrella footer__icon"></i>
          )}
          {item.label === 'Moto roads' && (
            <i class="bi bi-map footer__icon"></i>
          )}
          {item.label}
        </a>
      ))}
    </div>

    <div class="footer__column">
      {footerLinks.blog.map((item) => (
        item.spacer ? (
          <span class="footer__spacer" aria-hidden="true"></span>
        ) : (
          <a
            class="footer__link"
            href={item.href}
            data-bookmark={item.action === 'bookmark' ? 'true' : undefined}
          >
            {item.label === 'Amalfi News' && (
              <i class="bi bi-newspaper footer__icon"></i>
            )}
            {item.label === 'Contact us' && (
              <i class="bi bi-envelope footer__icon"></i>
            )}
            {item.label === 'Add to bookmarks' && (
              <i class="bi bi-bookmark-plus footer__icon"></i>
            )}
            {item.label}
          </a>
        )
      ))}
    </div>
  </div>
  <div class="footer__bottom">
    <div class="container footer__bottom-inner">
      <p class="footer__legal">
        © 2014-{new Date().getFullYear()} CristallPont S.R.L. · P.IVA / C.F.: 05863730650
        <br />
        <span class="footer__registry">Sede legale: Traversa Dragone, 2 · Cap. Soc. €10.000</span>
      </p>
      <nav class="footer__meta" aria-label="Legal links">
        <a class="footer__policy" href="/privacy">Privacy Policy</a>
        <span class="footer__divider" aria-hidden="true">·</span>
        <a class="footer__policy" href="/cookie-policy">Cookie Policy</a>
        <span class="footer__divider" aria-hidden="true">·</span>
        <a class="footer__policy" href="/terms">Termini e Condizioni</a>
        <span class="footer__divider" aria-hidden="true">·</span>
        <button class="footer__cookie-settings" type="button" id="open-cookie-banner">Cookie settings</button>
      </nav>
    </div>
  </div>
  <div class="footer__credit-bar">
    <div class="container">
      <span class="footer__credit">
        Design & Development Gregory '<a
          class="footer__credit-link"
          href="https://cinereo.it"
          target="_blank"
          rel="noreferrer"
        >Cinereo</a>' Day
      </span>
    </div>
  </div>
</footer>

<script is:inline>
  const bookmarkLink = document.querySelector('[data-bookmark="true"]')
  bookmarkLink?.addEventListener('click', (event) => {
    event.preventDefault()
    const url = window.location.origin
    const title = document.title

    if (window.sidebar && window.sidebar.addPanel) {
      window.sidebar.addPanel(title, url, '')
      return
    }

    if (window.external && 'AddFavorite' in window.external) {
      window.external.AddFavorite(url, title)
      return
    }

    alert('Press Ctrl+D (Windows) or ⌘+D (Mac) to bookmark this page.')
  })

  document.getElementById('open-cookie-banner')?.addEventListener('click', function () {
    var banner = document.getElementById('cookie-banner')
    if (banner) banner.classList.add('is-visible')
  })
</script>

<style>
  .footer {
    padding: 4rem 0 0;
    background: var(--color-bg);
    border-top: 1px solid var(--color-border);
  }

  .footer__inner {
    display: grid;
    gap: 2.5rem;
    grid-template-columns: 1.2fr repeat(4, 1fr);
    align-items: start;
  }

  .footer__logo-wrap {
    display: inline-flex;
    align-items: center;
    margin-bottom: 1.5rem;
    max-width: 100%;
  }

  .footer__logo {
    display: block;
    height: 56px;
    width: auto;
    max-width: min(240px, 70vw);
    object-fit: contain;
  }

  .footer__logo--dark {
    display: none;
  }

  :global([data-theme='night']) .footer__logo--light {
    display: none;
  }

  :global([data-theme='night']) .footer__logo--dark {
    display: block;
  }

  .footer__social {
    display: flex;
    gap: 0.8rem;
  }

  .footer__social-link {
    width: 44px;
    height: 44px;
    border-radius: 50%;
    border: 1px solid var(--color-border);
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    color: var(--color-text);
    transition:
      background 0.25s ease,
      border-color 0.25s ease,
      color 0.25s ease,
      transform 0.25s ease;
  }

  .footer__social-link:hover,
  .footer__social-link:focus-visible {
    color: #ffffff;
    border-color: transparent;
    transform: translateY(-1px);
  }

  .footer__social-link--instagram:hover,
  .footer__social-link--instagram:focus-visible {
    background: #e1306c;
  }

  .footer__social-link--facebook:hover,
  .footer__social-link--facebook:focus-visible {
    background: #1877f2;
  }

  .footer__social-link--twitter:hover,
  .footer__social-link--twitter:focus-visible {
    background: #1d9bf0;
  }

  .footer__column {
    display: flex;
    flex-direction: column;
    gap: 0.8rem;
  }

  .footer__link {
    display: flex;
    gap: 0.6rem;
    align-items: center;
    color: var(--color-text);
    font-size: 0.95rem;
    font-weight: 500;
    border-bottom: 1px solid var(--color-border);
    padding-bottom: 0.4rem;
  }

  .footer__spacer {
    height: 0.6rem;
  }

  .footer__icon {
    font-size: 0.85rem;
    color: var(--color-text-muted);
  }

  .footer__icon--img {
    width: 1.1em;
    height: 1.1em;
    object-fit: contain;
    display: inline-block;
  }

  .footer__bottom {
    margin-top: 3rem;
    padding: 1.2rem 0;
    border-top: 1px solid var(--color-border);
    color: var(--color-text-muted);
    font-size: 0.85rem;
  }

  .footer__bottom-inner {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: 1.5rem;
  }

  .footer__legal {
    margin: 0;
    line-height: 1.6;
  }

  .footer__registry {
    opacity: 0.7;
    font-size: 0.8rem;
  }

  .footer__meta {
    display: flex;
    align-items: center;
    gap: 0.7rem;
    flex-wrap: wrap;
    flex-shrink: 0;
  }

  .footer__divider {
    color: var(--color-text-muted);
    opacity: 0.5;
  }

  .footer__policy,
  .footer__credit-link {
    text-decoration: underline;
    text-underline-offset: 3px;
  }

  .footer__policy:hover,
  .footer__credit-link:hover {
    color: var(--color-accent);
  }

  .footer__cookie-settings {
    background: none;
    border: none;
    padding: 0;
    font-family: inherit;
    font-size: inherit;
    color: inherit;
    cursor: pointer;
    text-decoration: underline;
    text-underline-offset: 3px;
  }

  .footer__cookie-settings:hover {
    color: var(--color-accent);
  }

  .footer__bottom a {
    color: inherit;
  }

  .footer__credit-bar {
    background: var(--color-surface);
    padding: 0.75rem 0;
    text-align: center;
  }

  .footer__credit {
    font-family: var(--font-mono);
    letter-spacing: 0.02em;
    font-size: 0.75rem;
    color: var(--color-text-muted);
    opacity: 0.7;
  }

  .footer__credit-link {
    color: inherit;
  }

  @media (max-width: 1100px) {
    .footer__inner {
      grid-template-columns: 1fr 1fr;
    }

    .footer__bottom-inner {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.8rem;
    }
  }

  @media (max-width: 720px) {
    .footer__logo {
      height: 75px;
      max-width: min(360px, 96vw);
    }

    .footer__link {
      font-size: 1.425rem;
    }

    .footer__link--nowrap {
      white-space: nowrap;
    }

    .footer__icon {
      font-size: 1.275rem;
    }

    .footer__bottom {
      font-size: 0.82rem;
    }

    .footer__meta {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.3rem;
    }

    .footer__divider {
      display: none;
    }

    .footer__credit {
      font-size: 0.72rem;
    }
  }

  @media (max-width: 640px) {
    .footer__inner {
      grid-template-columns: 1fr;
    }
  }
</style>
