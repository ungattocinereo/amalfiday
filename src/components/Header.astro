---
import { navigation, socialLinks, site } from '../data/site'
const headerSocials = socialLinks.filter((item) =>
  ['Instagram', 'Facebook'].includes(item.label)
)
---

<header class="header" id="header">
  <!-- Mobile: logo outside pill, centered -->
  <a class="logo mobile-logo" href="/" aria-label={`${site.name} home`}>
    <img class="logo__mark logo__mark--day" src="/brand/logo-dark.svg" alt={site.name} />
    <img class="logo__mark logo__mark--night" src="/brand/logo-light.svg" alt="" aria-hidden="true" />
  </a>

  <div class="header__pill">
    <div class="header__inner">
      <!-- Desktop: logo inside pill, left -->
      <a class="logo desktop-logo" href="/" aria-label={`${site.name} home`}>
        <img class="logo__mark logo__mark--day" src="/brand/logo-dark.svg" alt={site.name} />
        <img class="logo__mark logo__mark--night" src="/brand/logo-light.svg" alt="" aria-hidden="true" />
      </a>

      <nav class="nav">
        {navigation.map((item) => (
          <a class="nav__link" href={item.href}>
            <i class={`bi ${item.icon}`}></i>
            {item.label}
          </a>
        ))}
      </nav>

      <div class="header__actions">
        <div class="header__social">
          {headerSocials.map((item) => (
            <a class="header__social-link" href={item.href} target="_blank" rel="noreferrer" aria-label={item.label}>
              {item.label === 'Instagram' && <i class="bi bi-instagram"></i>}
              {item.label === 'Facebook' && <i class="bi bi-facebook"></i>}
            </a>
          ))}
        </div>
        <span class="header__divider"></span>
        <a class="cta-btn" href="/contact">Contact</a>
        <span class="header__divider"></span>
        <label class="theme-switch" aria-label="Toggle theme">
          <input class="theme-switch__input" type="checkbox" />
          <span class="theme-switch__track">
            <span class="theme-switch__thumb"></span>
          </span>
          <span class="theme-switch__icon" aria-hidden="true">
            <i class="bi bi-sun"></i>
            <i class="bi bi-moon-stars"></i>
          </span>
        </label>
      </div>
    </div>
  </div>

  <!-- Mobile: hamburger -->
  <button class="menu-toggle" type="button" aria-label="Open menu" aria-expanded="false">
    <i class="bi bi-list"></i>
    <i class="bi bi-x-lg"></i>
  </button>

  <!-- Full-screen mobile menu -->
  <div class="mobile-panel" role="dialog" aria-modal="true" aria-hidden="true">
    <div class="mobile-panel__logo">
      <img class="logo__mark logo__mark--day" src="/brand/logo-dark.svg" alt={site.name} />
      <img class="logo__mark logo__mark--night" src="/brand/logo-light.svg" alt="" aria-hidden="true" />
    </div>

    <div class="mobile-panel__links">
      <a class="mobile-panel__link" href="/">
        <i class="bi bi-house-door-fill"></i> Home
      </a>
      {navigation.map((item) => (
        <a class="mobile-panel__link" href={item.href}>
          <i class={`bi ${item.icon}`}></i> {item.label}
        </a>
      ))}
    </div>

    <div class="mobile-panel__divider"></div>

    <div class="mobile-panel__theme-row">
      <label class="theme-switch" aria-label="Toggle theme">
        <input class="theme-switch__input" type="checkbox" />
        <span class="theme-switch__track">
          <span class="theme-switch__thumb"></span>
        </span>
        <span class="theme-switch__icon" aria-hidden="true">
          <i class="bi bi-sun"></i>
          <i class="bi bi-moon-stars"></i>
        </span>
      </label>
      <span class="mobile-panel__theme-label">Day / Night</span>
    </div>

    <div class="mobile-panel__bottom">
      <div class="mobile-panel__social">
        {socialLinks.filter(s => s.label !== 'Email').map((item) => (
          <a href={item.href} target="_blank" rel="noreferrer" aria-label={item.label}>
            {item.label === 'Instagram' && <i class="bi bi-instagram"></i>}
            {item.label === 'Facebook' && <i class="bi bi-facebook"></i>}
            {item.label === 'Twitter' && <i class="bi bi-twitter-x"></i>}
          </a>
        ))}
      </div>
      <a class="mobile-panel__whatsapp" href="/contact">
        <i class="bi bi-whatsapp"></i> WhatsApp
      </a>
    </div>
  </div>
</header>

<script is:inline>
  ;(() => {
    const root = document.documentElement
    const header = document.getElementById('header')
    const themeToggles = Array.from(document.querySelectorAll('.theme-switch__input'))
    const menuToggle = document.querySelector('.menu-toggle')
    const mobilePanel = document.querySelector('.mobile-panel')
    const desktopLogo = document.querySelector('.desktop-logo')
    const scrim = document.getElementById('topScrim')

    /* ── Responsive logo visibility ── */
    const mq = window.matchMedia('(min-width:901px)')
    const syncLogo = () => {
      if (desktopLogo) desktopLogo.style.display = mq.matches ? 'inline-flex' : 'none'
      const mobileLogo = header?.querySelector(':scope > .mobile-logo')
      if (mobileLogo) mobileLogo.style.display = mq.matches ? 'none' : 'inline-flex'
    }
    syncLogo()
    mq.addEventListener('change', syncLogo)

    /* ── Theme ── */
    const getStoredTheme = () => {
      try { return localStorage.getItem('theme') } catch { return null }
    }

    const getSystemTheme = () =>
      window.matchMedia?.('(prefers-color-scheme:dark)').matches ? 'night' : 'day'

    const syncSwitch = (value) =>
      themeToggles.forEach((t) => { t.checked = value === 'night' })

    const setTheme = (value, { persist = false } = {}) => {
      root.dataset.theme = value
      if (persist) try { localStorage.setItem('theme', value) } catch {}
      syncSwitch(value)
    }

    const storedTheme = getStoredTheme()
    const hasStoredTheme = storedTheme === 'day' || storedTheme === 'night'
    const initialTheme = hasStoredTheme ? storedTheme : root.dataset.theme || getSystemTheme()
    let allowSystemSync = !hasStoredTheme

    setTheme(initialTheme, { persist: hasStoredTheme })

    if (window.matchMedia) {
      const media = window.matchMedia('(prefers-color-scheme: dark)')
      const onSystemChange = (event) => {
        if (!allowSystemSync) return
        setTheme(event.matches ? 'night' : 'day')
      }
      if (media.addEventListener) media.addEventListener('change', onSystemChange)
      else if (media.addListener) media.addListener(onSystemChange)
    }

    themeToggles.forEach((toggle) => {
      toggle.addEventListener('change', () => {
        allowSystemSync = false
        setTheme(toggle.checked ? 'night' : 'day', { persist: true })
      })
    })

    /* ── Mobile menu ── */
    menuToggle?.addEventListener('click', () => {
      const isOpen = header?.classList.toggle('menu-open')
      menuToggle.setAttribute('aria-expanded', String(isOpen))
      mobilePanel?.setAttribute('aria-hidden', String(!isOpen))
      document.body.style.overflow = isOpen ? 'hidden' : ''
    })

    document.querySelectorAll('.mobile-panel__link').forEach((link) => {
      link.addEventListener('click', () => {
        header?.classList.remove('menu-open')
        menuToggle?.setAttribute('aria-expanded', 'false')
        mobilePanel?.setAttribute('aria-hidden', 'true')
        document.body.style.overflow = ''
      })
    })

    /* ── Scroll + on-hero + scrim ── */
    /* Hero element lives inside <main><slot/></main> which is parsed AFTER
       this inline script.  We must wait for the full DOM before querying it. */
    const initHero = () => {
      const heroEl = document.querySelector('.hero--orange, .hero--dark, .hero--azure')

      const onScroll = () => {
        const scrolled = window.scrollY > 12
        header?.classList.toggle('is-scrolled', scrolled)
        if (heroEl) {
          const heroBottom = heroEl.getBoundingClientRect().bottom
          const onHero = !scrolled && heroBottom > 80
          header?.classList.toggle('on-hero', onHero)
          if (scrim) scrim.classList.toggle('visible', onHero)
        } else {
          header?.classList.remove('on-hero')
          if (scrim) scrim.classList.remove('visible')
        }
      }

      window.addEventListener('scroll', onScroll, { passive: true })
      onScroll()
      /* Mark header as JS-initialised so CSS :not(.on-hero) rule only applies
         after the class has had a chance to be set */
      header?.setAttribute('data-ready', '')
    }

    /* If DOM is already complete (e.g. deferred execution), run immediately;
       otherwise wait for DOMContentLoaded */
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initHero)
    } else {
      initHero()
    }
  })()
</script>

<style>
  /* ═══════════════════════════════════════════
     HEADER — Logo-First Pill (Concept A)
     ═══════════════════════════════════════════ */

  .header {
    position: fixed;
    top: clamp(10px, 2vw, 18px);
    left: 0;
    right: 0;
    z-index: 20;
    pointer-events: none;
    color: var(--color-text);
  }

  /* ─── Pill shell ─── */
  .header__pill {
    pointer-events: auto;
    width: min(var(--container-max), calc(100% - 32px));
    margin: 0 auto;
    border-radius: 999px;
    border: 1px solid transparent;
    background: transparent;
    backdrop-filter: none;
    -webkit-backdrop-filter: none;
    transition: background 0.25s, border-color 0.25s, box-shadow 0.25s, backdrop-filter 0.25s;
  }

  /* Show pill background only after JS init (data-ready) — prevents flash on hero pages */
  .header[data-ready].is-scrolled .header__pill,
  .header[data-ready]:not(.on-hero) .header__pill {
    background: var(--color-nav-bg);
    border-color: var(--color-nav-border);
    box-shadow: var(--shadow-soft);
    backdrop-filter: blur(18px);
    -webkit-backdrop-filter: blur(18px);
  }

  .header__inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 1.6rem;
    transition: padding 0.25s;
  }

  .header.is-scrolled .header__inner {
    padding: 0.55rem 1.4rem;
  }

  /* ─── Logo ─── */
  .logo {
    flex: 0 0 auto;
    display: inline-flex;
    align-items: center;
    text-decoration: none;
  }

  .logo__mark {
    height: 44px;
    width: auto;
    display: block;
    transition: transform 0.2s;
  }

  .header.is-scrolled .logo__mark {
    transform: scale(0.9);
  }

  .logo__mark--night {
    display: none;
  }

  :global([data-theme='night']) .logo__mark--day {
    display: none;
  }

  :global([data-theme='night']) .logo__mark--night {
    display: block;
  }

  /* Mobile logo: hidden by default, shown by JS + media query */
  .mobile-logo {
    display: none;
    pointer-events: auto;
  }

  /* Desktop logo: shown by JS on >=901 */
  .desktop-logo {
    display: none;
  }

  /* ─── Nav ─── */
  .nav {
    display: flex;
    gap: 1.4rem;
    align-items: center;
  }

  .nav__link {
    font-weight: 500;
    font-size: 0.95rem;
    color: currentColor;
    text-decoration: none;
    position: relative;
    display: inline-flex;
    align-items: center;
    gap: 0.45rem;
    white-space: nowrap;
    transition: color 0.2s;
  }

  .nav__link i {
    font-size: 1rem;
  }

  .nav__link::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: -5px;
    width: 0;
    height: 2px;
    background: var(--gradient-sunset);
    transition: width 0.2s;
  }

  .nav__link:hover::after {
    width: 100%;
  }

  .nav__link:hover {
    text-decoration: none;
  }

  /* ─── Actions (right side) ─── */
  .header__actions {
    display: flex;
    align-items: center;
    gap: 0.8rem;
  }

  /* ─── Desktop social icons ─── */
  .header__social {
    display: flex;
    align-items: center;
    gap: 0.2rem;
  }

  .header__social-link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    border-radius: 50%;
    color: currentColor;
    opacity: 0.7;
    font-size: 0.95rem;
    text-decoration: none;
    transition: opacity 0.2s, transform 0.15s;
    position: relative;
  }

  .header__social-link:hover {
    opacity: 1;
    transform: translateY(-1px);
  }

  .header__social-link::after {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 50%;
    background: currentColor;
    opacity: 0;
    transition: opacity 0.15s;
  }

  .header__social-link:hover::after {
    opacity: 0.06;
  }

  .header__social-link i {
    position: relative;
    z-index: 1;
  }

  /* ─── Dividers ─── */
  .header__divider {
    width: 1px;
    height: 18px;
    background: var(--color-border);
    margin: 0 0.4rem;
  }

  /* ─── CTA button ─── */
  .cta-btn {
    font-family: var(--font-body);
    font-size: 0.85rem;
    font-weight: 500;
    padding: 0.45rem 1.1rem;
    border-radius: 999px;
    cursor: pointer;
    border: 1.5px solid var(--color-accent);
    color: var(--color-accent);
    background: transparent;
    transition: background 0.2s, color 0.2s, transform 0.15s;
    white-space: nowrap;
    text-decoration: none;
  }

  .cta-btn:hover {
    background: var(--color-accent);
    color: #fff;
    transform: translateY(-1px);
  }

  /* ─── Theme toggle ─── */
  .theme-switch {
    display: inline-flex;
    align-items: center;
    cursor: pointer;
    position: relative;
  }

  .theme-switch__input {
    position: absolute;
    opacity: 0;
    pointer-events: none;
  }

  .theme-switch__track {
    width: 42px;
    height: 21px;
    border-radius: 999px;
    background: #1b1f27;
    display: inline-flex;
    align-items: center;
    padding: 2px;
    position: relative;
    z-index: 0;
    transition: background 0.2s;
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.08);
  }

  :global([data-theme='night']) .theme-switch__track {
    background: #171c26;
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.12);
  }

  .theme-switch__thumb {
    width: 17px;
    height: 17px;
    border-radius: 50%;
    background: #fff;
    display: block;
    transform: translateX(0);
    transition: transform 0.18s;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.25);
    position: relative;
    z-index: 2;
  }

  .theme-switch__input:checked + .theme-switch__track .theme-switch__thumb {
    transform: translateX(21px);
  }

  :global([data-theme='night']) .theme-switch__thumb {
    transform: translateX(21px);
  }

  .theme-switch__icon {
    position: absolute;
    left: 0;
    top: 0;
    width: 42px;
    height: 21px;
    pointer-events: none;
    color: #fff;
    z-index: 1;
  }

  .theme-switch__icon i {
    position: absolute;
    font-size: 0.68rem;
    transition: opacity 0.2s, transform 0.2s;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.35);
  }

  .theme-switch__icon .bi-sun {
    right: 6px;
    top: 50%;
    transform: translateY(-50%);
  }

  .theme-switch__icon .bi-moon-stars {
    left: 6px;
    top: 50%;
    transform: translateY(-50%) scale(0.8);
    opacity: 0;
  }

  :global([data-theme='night']) .theme-switch__icon .bi-sun {
    opacity: 0;
    transform: translateY(-50%) scale(0.8);
  }

  :global([data-theme='night']) .theme-switch__icon .bi-moon-stars {
    opacity: 1;
    transform: translateY(-50%) scale(1);
  }

  /* ─── Hamburger ─── */
  .menu-toggle {
    display: none;
    width: 46px;
    height: 46px;
    border-radius: 50%;
    border: none;
    background: var(--color-card);
    box-shadow: var(--shadow-soft);
    align-items: center;
    justify-content: center;
    cursor: pointer;
    color: var(--color-text);
    font-size: 1.35rem;
    transition: transform 0.15s, background 0.2s, color 0.2s;
    pointer-events: auto;
  }

  .menu-toggle:active {
    transform: scale(0.94);
  }

  .menu-toggle .bi-x-lg {
    display: none;
  }

  .header.menu-open .menu-toggle .bi-list {
    display: none;
  }

  .header.menu-open .menu-toggle .bi-x-lg {
    display: inline;
  }

  /* ═══════════════════════════════════════════
     ON-HERO STATE (light theme only)
     White navbar content over dark/gradient heroes
     ═══════════════════════════════════════════ */

  :global(:root:not([data-theme='night'])) .header.on-hero:not(.is-scrolled) {
    color: #fff;
  }

  :global(:root:not([data-theme='night'])) .header.on-hero:not(.is-scrolled) .logo__mark--day {
    display: none;
  }

  :global(:root:not([data-theme='night'])) .header.on-hero:not(.is-scrolled) .logo__mark--night {
    display: block;
  }

  :global(:root:not([data-theme='night'])) .header.on-hero:not(.is-scrolled) .logo__mark {
    filter: drop-shadow(0 6px 18px rgba(0, 0, 0, 0.35));
  }

  :global(:root:not([data-theme='night'])) .header.on-hero:not(.is-scrolled) .nav__link::after {
    background: rgba(255, 255, 255, 0.95);
  }

  :global(:root:not([data-theme='night'])) .header.on-hero:not(.is-scrolled) .cta-btn {
    border-color: rgba(255, 255, 255, 0.85);
    color: #fff;
  }

  :global(:root:not([data-theme='night'])) .header.on-hero:not(.is-scrolled) .cta-btn:hover {
    background: rgba(255, 255, 255, 0.18);
    border-color: #fff;
  }

  :global(:root:not([data-theme='night'])) .header.on-hero:not(.is-scrolled) .theme-switch__track {
    background: rgba(255, 255, 255, 0.22);
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.18);
  }

  :global(:root:not([data-theme='night'])) .header.on-hero:not(.is-scrolled) .header__social-link {
    color: #fff;
    opacity: 0.85;
  }

  :global(:root:not([data-theme='night'])) .header.on-hero:not(.is-scrolled) .header__social-link:hover {
    opacity: 1;
  }

  :global(:root:not([data-theme='night'])) .header.on-hero:not(.is-scrolled) .header__divider {
    background: rgba(255, 255, 255, 0.3);
  }

  :global(:root:not([data-theme='night'])) .header.on-hero:not(.is-scrolled) .menu-toggle {
    background: rgba(255, 255, 255, 0.18);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    color: #fff;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
  }

  /* Night theme on-hero: just logo shadow, everything else stays as-is */
  .header.on-hero .logo__mark {
    filter: drop-shadow(0 6px 18px rgba(0, 0, 0, 0.35));
  }

  .header.on-hero .logo__mark--day {
    display: none;
  }

  .header.on-hero .logo__mark--night {
    display: block;
  }

  .header.on-hero .theme-switch__track {
    background: #1b1f27;
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.25);
  }

  /* ═══════════════════════════════════════════
     MOBILE PANEL (full-screen overlay)
     ═══════════════════════════════════════════ */

  .mobile-panel {
    display: none;
    position: fixed;
    inset: 0;
    z-index: 18;
    background: var(--color-bg);
    flex-direction: column;
    padding: calc(env(safe-area-inset-top, 0px) + 80px) 1.25rem calc(env(safe-area-inset-bottom, 0px) + 1.5rem);
    opacity: 0;
    visibility: hidden;
    pointer-events: none;
    transform: translateY(-12px);
    transition: opacity 0.25s ease-out, transform 0.25s ease-out, visibility 0.25s;
  }

  .header.menu-open .mobile-panel {
    opacity: 1;
    visibility: visible;
    pointer-events: auto;
    transform: translateY(0);
  }

  .mobile-panel__logo {
    display: flex;
    justify-content: center;
    margin-bottom: 1.5rem;
  }

  .mobile-panel__logo .logo__mark {
    height: 48px;
    width: auto;
    filter: drop-shadow(0 2px 8px rgba(0, 0, 0, 0.15));
  }

  .mobile-panel__links {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .mobile-panel__link {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0 1.2rem;
    height: 68px;
    border-radius: 16px;
    background: var(--color-card);
    border: 1px solid var(--color-border);
    font-size: 1.3rem;
    font-weight: 600;
    color: var(--color-text);
    text-decoration: none;
    transition: background 0.15s, transform 0.15s;
  }

  .mobile-panel__link:active {
    transform: scale(0.97);
    background: var(--color-surface);
  }

  .mobile-panel__link i {
    font-size: 1.5rem;
    width: 2rem;
    text-align: center;
  }

  .mobile-panel__divider {
    height: 1px;
    background: var(--color-border);
    margin: 1.2rem 0;
  }

  .mobile-panel__theme-row {
    display: flex;
    align-items: center;
    gap: 0.8rem;
  }

  .mobile-panel__theme-label {
    font-size: 0.9rem;
    color: var(--color-text-muted);
    font-weight: 500;
  }

  /* Larger toggle for mobile */
  .mobile-panel .theme-switch__track {
    width: 56px;
    height: 28px;
  }

  .mobile-panel .theme-switch__thumb {
    width: 24px;
    height: 24px;
  }

  .mobile-panel .theme-switch__input:checked + .theme-switch__track .theme-switch__thumb {
    transform: translateX(28px);
  }

  :global([data-theme='night']) .mobile-panel .theme-switch__thumb {
    transform: translateX(28px);
  }

  .mobile-panel .theme-switch__icon {
    width: 56px;
    height: 28px;
  }

  .mobile-panel .theme-switch__icon i {
    font-size: 0.82rem;
  }

  .mobile-panel .theme-switch__icon .bi-sun {
    right: 8px;
  }

  .mobile-panel .theme-switch__icon .bi-moon-stars {
    left: 8px;
  }

  .mobile-panel__bottom {
    margin-top: auto;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .mobile-panel__social {
    display: flex;
    gap: 1rem;
    justify-content: center;
  }

  .mobile-panel__social a {
    width: 44px;
    height: 44px;
    border-radius: 12px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    color: var(--color-text);
    font-size: 1.3rem;
    background: var(--color-card);
    border: 1px solid var(--color-border);
    text-decoration: none;
    transition: background 0.15s;
  }

  .mobile-panel__social a:active {
    background: var(--color-surface);
  }

  .mobile-panel__whatsapp {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.6rem;
    height: 56px;
    border-radius: 16px;
