---
import { navigation, socialLinks, site } from '../data/site'
import LogoMark from './LogoMark.astro'

const headerSocials = socialLinks.filter((item) =>
  ['Instagram', 'Facebook', 'Twitter'].includes(item.label)
)
---
<header class="header">
  <div class="header__shell">
    <div class="header__inner">
    <nav class="nav">
      {navigation.map((item) => (
        <a class="nav__link" href={item.href}>
          {item.label}
        </a>
      ))}
    </nav>

    <a class="logo" href="/" aria-label={`${site.name} home`}>
      <LogoMark class="logo__mark" />
    </a>

    <div class="header__actions">
      <div class="social">
        {headerSocials.map((item) => (
          <a class="social__link" href={item.href} target="_blank" rel="noreferrer">
            <span class="sr-only">{item.label}</span>
            {item.label === 'Instagram' && <i class="bi bi-instagram"></i>}
            {item.label === 'Facebook' && <i class="bi bi-facebook"></i>}
            {item.label === 'Twitter' && <i class="bi bi-twitter-x"></i>}
          </a>
        ))}
      </div>
      <label class="theme-switch" aria-label="Toggle theme">
        <input class="theme-switch__input" type="checkbox" />
        <span class="theme-switch__track">
          <span class="theme-switch__thumb"></span>
        </span>
      </label>
      <button class="menu-toggle" type="button" aria-label="Open menu" aria-expanded="false">
        <i class="bi bi-list"></i>
        <i class="bi bi-x-lg"></i>
      </button>
    </div>
    </div>
    <div class="mobile-panel">
    <div class="mobile-panel__links">
      {navigation.map((item) => (
        <a class="mobile-panel__link" href={item.href}>
          {item.label}
        </a>
      ))}
    </div>
    <div class="mobile-panel__social">
      {headerSocials.map((item) => (
        <a class="social__link" href={item.href} target="_blank" rel="noreferrer">
          <span class="sr-only">{item.label}</span>
          {item.label === 'Instagram' && <i class="bi bi-instagram"></i>}
          {item.label === 'Facebook' && <i class="bi bi-facebook"></i>}
          {item.label === 'Twitter' && <i class="bi bi-twitter-x"></i>}
        </a>
      ))}
    </div>
    </div>
  </div>
</header>

<script is:inline>
  ;(() => {
    const root = document.documentElement
    const header = document.querySelector('.header')
    const themeToggle = document.querySelector('.theme-switch__input')
    const menuToggle = document.querySelector('.menu-toggle')
    const heroEl = document.querySelector('.hero--orange, .hero--dark')

    const setTheme = (value) => {
      root.dataset.theme = value
      try {
        localStorage.setItem('theme', value)
      } catch (error) {
        // ignore storage errors
      }
      syncSwitch(value)
    }

    const syncSwitch = (value) => {
      if (themeToggle) {
        themeToggle.checked = value === 'night'
      }
    }

    syncSwitch(root.dataset.theme)

    themeToggle?.addEventListener('change', () => {
      const next = themeToggle.checked ? 'night' : 'day'
      setTheme(next)
    })

    menuToggle?.addEventListener('click', () => {
      const isOpen = header?.classList.toggle('menu-open')
      menuToggle?.setAttribute('aria-expanded', String(isOpen))
    })

    document.querySelectorAll('.mobile-panel__link').forEach((link) => {
      link.addEventListener('click', () => {
        header?.classList.remove('menu-open')
        menuToggle?.setAttribute('aria-expanded', 'false')
      })
    })

    const onScroll = () => {
      header?.classList.toggle('is-scrolled', window.scrollY > 12)
      if (heroEl) {
        const heroBottom = heroEl.getBoundingClientRect().bottom
        const onHero = window.scrollY < 12 && heroBottom > 80
        header?.classList.toggle('on-hero', onHero)
      } else {
        header?.classList.remove('on-hero')
      }
    }

    window.addEventListener('scroll', onScroll, { passive: true })
    window.addEventListener('load', onScroll)
    onScroll()
  })()
</script>

<style>
  .header {
    position: fixed;
    top: clamp(10px, 2vw, 18px);
    left: 0;
    right: 0;
    z-index: 20;
    color: var(--color-text);
    --nav-underline: var(--gradient-sunset);
    --nav-outline: var(--color-border);
    pointer-events: none;
  }

  .header__shell {
    pointer-events: auto;
    background: var(--color-nav-bg);
    backdrop-filter: blur(12px);
    border: 1px solid var(--color-nav-border);
    transition: background 0.2s ease, box-shadow 0.2s ease, border-color 0.2s ease;
    overflow: hidden;
    border-radius: 999px;
    margin: 0 auto;
    width: min(820px, calc(100% - 32px));
    box-shadow: 0 12px 28px rgba(0, 0, 0, 0.08);
  }

  .header.is-scrolled {
    box-shadow: none;
  }

  .header.on-hero {
    color: #ffffff;
    --nav-underline: rgba(255, 255, 255, 0.95);
    --nav-outline: rgba(255, 255, 255, 0.35);
  }

  .header.on-hero .header__shell {
    background: rgba(255, 89, 0, 0.12);
    border-color: rgba(255, 255, 255, 0.15);
  }

  .header.is-scrolled .header__shell {
    background: var(--color-nav-bg-strong);
    box-shadow: var(--shadow-soft);
    border-color: var(--color-nav-border);
  }

  .header__inner {
    display: grid;
    grid-template-columns: minmax(0, 1fr) auto minmax(0, 1fr);
    align-items: center;
    gap: 1.5rem;
    padding: 1rem 0;
    transition: padding 0.2s ease;
    width: 100%;
    max-width: var(--container-max);
    margin: 0 auto;
    padding-left: 1.4rem;
    padding-right: 1.4rem;
  }

  .header.is-scrolled .header__inner {
    padding: 0.6rem 1.4rem;
  }

  .logo {
    justify-self: center;
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  .logo__mark {
    transition: transform 0.2s ease;
    display: block;
    color: currentColor;
  }

  .header.is-scrolled .logo__mark {
    transform: scale(0.92);
  }

  .logo {
    color: var(--color-text);
  }

  .header.on-hero .logo {
    color: #ffffff;
  }

  [data-theme='night'] .logo {
    color: #ffffff;
  }

  .logo__mark {
    height: 44px;
    width: auto;
  }

  .header.on-hero .logo__mark {
    filter: drop-shadow(0 6px 18px rgba(0, 0, 0, 0.35));
  }

  .nav {
    display: flex;
    gap: 1.2rem;
    justify-content: flex-start;
  }

  .nav__link {
    font-weight: 500;
    color: currentColor;
    position: relative;
    text-decoration: none;
  }

  .nav__link::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: -6px;
    width: 0;
    height: 2px;
    background: var(--nav-underline);
    transition: width 0.2s ease;
  }

  .nav__link:hover::after {
    width: 100%;
  }

  .nav__link:hover {
    text-decoration: none;
  }

  .social {
    display: flex;
    gap: 0.8rem;
    flex-wrap: wrap;
    justify-content: flex-end;
  }

  .social__link {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    border: 1px solid var(--nav-outline);
    display: inline-flex;
    align-items: center;
    justify-content: center;
    color: currentColor;
    transition: border-color 0.2s ease, color 0.2s ease, transform 0.2s ease;
  }

  .social__link i {
    font-size: 1rem;
  }

  .social__link:hover {
    border-color: var(--color-aux);
    color: var(--color-aux);
    transform: translateY(-1px);
  }

  .header__actions {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    gap: 0.7rem;
  }

  .theme-switch {
    display: inline-flex;
    align-items: center;
    cursor: pointer;
  }

  .theme-switch__input {
    position: absolute;
    opacity: 0;
    pointer-events: none;
  }

  .theme-switch__track {
    width: 30px;
    height: 16px;
    border-radius: 999px;
    background: rgba(255, 255, 255, 0.35);
    border: 1px solid var(--nav-outline);
    display: inline-flex;
    align-items: center;
    padding: 2px;
    transition: background 0.2s ease, border-color 0.2s ease;
  }

  .theme-switch__thumb {
    width: 11px;
    height: 11px;
    border-radius: 50%;
    background: #ffffff;
    transform: translateX(0);
    transition: transform 0.2s ease, background 0.2s ease;
  }

  [data-theme='night'] .theme-switch__track {
    background: rgba(1, 98, 255, 0.35);
  }

  [data-theme='night'] .theme-switch__thumb {
    transform: translateX(14px);
    background: #ffffff;
  }

  .menu-toggle {
    width: 34px;
    height: 34px;
    border-radius: 50%;
    border: 1px solid var(--nav-outline);
    background: var(--color-card);
    display: none;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    color: currentColor;
    transition: border-color 0.2s ease, color 0.2s ease, transform 0.2s ease;
  }

  .menu-toggle i {
    font-size: 1.05rem;
  }

  .menu-toggle .bi-x-lg {
    display: none;
  }

  .header.menu-open .menu-toggle .bi-list {
    display: none;
  }

  .header.menu-open .menu-toggle .bi-x-lg {
    display: inline;
  }

  .mobile-panel {
    display: none;
    position: absolute;
    left: 0;
    right: 0;
    top: 100%;
    border-top: 1px solid var(--color-nav-border);
    background: var(--color-nav-bg-strong);
    padding: 1.5rem 0 2rem;
    box-shadow: var(--shadow-soft);
    border-radius: 0 0 24px 24px;
  }

  .mobile-panel__links {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: center;
  }

  .mobile-panel__link {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--color-text);
  }

  .mobile-panel__social {
    margin-top: 1rem;
    display: flex;
    gap: 0.8rem;
    justify-content: center;
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  @media (max-width: 900px) {
    .header__inner {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .nav {
      display: none;
    }

    .logo {
      order: -1;
    }

    .social {
      display: none;
    }

    .menu-toggle {
      display: inline-flex;
    }

    .header.menu-open .mobile-panel {
      display: block;
    }

    .header {
      top: 8px;
    }

    .header__shell {
      width: calc(100% - 20px);
      border-radius: 26px;
    }
  }
</style>
