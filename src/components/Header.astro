---
import { navigation, socialLinks, site } from '../data/site'
const headerSocials = socialLinks.filter((item) =>
  ['Instagram', 'Facebook', 'Twitter'].includes(item.label)
)
---
<header class="header">
  <div class="header__shell">
    <div class="header__inner">
      <div class="header__primary">
        <nav class="nav">
          {navigation.map((item) => (
            <a class="nav__link" href={item.href}>
              <i class={`bi ${item.icon}`}></i>
              {item.label}
            </a>
          ))}
        </nav>

        <a class="logo" href="/" aria-label={`${site.name} home`}>
          <img class="logo__mark logo__mark--day" src="/brand/logo-dark.svg" alt={site.name} />
          <img
            class="logo__mark logo__mark--night"
            src="/brand/logo-light.svg"
            alt=""
            aria-hidden="true"
          />
        </a>

        <div class="social">
          {headerSocials.map((item) => (
            <a class="social__link" href={item.href} target="_blank" rel="noreferrer">
              <span class="sr-only">{item.label}</span>
              {item.label === 'Instagram' && <i class="bi bi-instagram"></i>}
              {item.label === 'Facebook' && <i class="bi bi-facebook"></i>}
              {item.label === 'Twitter' && <i class="bi bi-twitter-x"></i>}
            </a>
          ))}
        </div>
      </div>

      <div class="header__actions">
        <label class="theme-switch" aria-label="Toggle theme">
          <input class="theme-switch__input" type="checkbox" />
          <span class="theme-switch__track">
            <span class="theme-switch__thumb"></span>
          </span>
          <span class="theme-switch__icon" aria-hidden="true">
            <i class="bi bi-sun"></i>
            <i class="bi bi-moon-stars"></i>
          </span>
        </label>
        <button class="menu-toggle" type="button" aria-label="Open menu" aria-expanded="false">
          <i class="bi bi-list"></i>
          <i class="bi bi-x-lg"></i>
        </button>
      </div>
    </div>
  </div>
  <div class="mobile-panel" role="dialog" aria-modal="true" aria-hidden="true">
    <div class="mobile-panel__links">
      {navigation.map((item) => (
        <a class="mobile-panel__link" href={item.href}>
          <span class="mobile-panel__link-label">
            <i class={`bi ${item.icon}`}></i>
            {item.label}
          </span>
        </a>
      ))}
    </div>
    <div class="mobile-panel__theme">
      <label class="theme-switch" aria-label="Toggle theme">
        <input class="theme-switch__input" type="checkbox" />
        <span class="theme-switch__track">
          <span class="theme-switch__thumb"></span>
        </span>
        <span class="theme-switch__icon" aria-hidden="true">
          <i class="bi bi-sun"></i>
          <i class="bi bi-moon-stars"></i>
        </span>
      </label>
    </div>
    <div class="mobile-panel__social">
      {headerSocials.map((item) => (
        <a class="mobile-panel__social-link" href={item.href} target="_blank" rel="noreferrer">
          {item.label === 'Instagram' && <i class="bi bi-instagram"></i>}
          {item.label === 'Facebook' && <i class="bi bi-facebook"></i>}
          {item.label === 'Twitter' && <i class="bi bi-twitter-x"></i>}
          <span>
            {item.label === 'Twitter' ? 'X (Twitter)' : item.label}
          </span>
        </a>
      ))}
    </div>
  </div>
</header>

<script is:inline>
  ;(() => {
    const root = document.documentElement
    const header = document.querySelector('.header')
    const themeToggles = Array.from(document.querySelectorAll('.theme-switch__input'))
    const menuToggle = document.querySelector('.menu-toggle')
    const mobilePanel = document.querySelector('.mobile-panel')
    const heroEl = document.querySelector('.hero--orange, .hero--dark')

    const getStoredTheme = () => {
      try {
        return localStorage.getItem('theme')
      } catch (error) {
        return null
      }
    }

    const getSystemTheme = () => {
      if (window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches) {
        return 'night'
      }
      return 'day'
    }

    const syncSwitch = (value) => {
      themeToggles.forEach((toggle) => {
        toggle.checked = value === 'night'
      })
    }

    const setTheme = (value, { persist = false } = {}) => {
      root.dataset.theme = value
      if (persist) {
        try {
          localStorage.setItem('theme', value)
        } catch (error) {
          // ignore storage errors
        }
      }
      syncSwitch(value)
    }

    const storedTheme = getStoredTheme()
    const hasStoredTheme = storedTheme === 'day' || storedTheme === 'night'
    const initialTheme = hasStoredTheme ? storedTheme : root.dataset.theme || getSystemTheme()
    let allowSystemSync = !hasStoredTheme

    setTheme(initialTheme, { persist: hasStoredTheme })

    if (window.matchMedia) {
      const media = window.matchMedia('(prefers-color-scheme: dark)')
      const onSystemChange = (event) => {
        if (!allowSystemSync) return
        setTheme(event.matches ? 'night' : 'day')
      }
      if (media.addEventListener) {
        media.addEventListener('change', onSystemChange)
      } else if (media.addListener) {
        media.addListener(onSystemChange)
      }
    }

    themeToggles.forEach((toggle) => {
      toggle.addEventListener('change', () => {
        const next = toggle.checked ? 'night' : 'day'
        allowSystemSync = false
        setTheme(next, { persist: true })
      })
    })

    menuToggle?.addEventListener('click', () => {
      const isOpen = header?.classList.toggle('menu-open')
      menuToggle?.setAttribute('aria-expanded', String(isOpen))
      mobilePanel?.setAttribute('aria-hidden', String(!isOpen))
      document.body.style.overflow = isOpen ? 'hidden' : ''
    })

    document.querySelectorAll('.mobile-panel__link').forEach((link) => {
      link.addEventListener('click', () => {
        header?.classList.remove('menu-open')
        menuToggle?.setAttribute('aria-expanded', 'false')
        mobilePanel?.setAttribute('aria-hidden', 'true')
        document.body.style.overflow = ''
      })
    })

    const onScroll = () => {
      header?.classList.toggle('is-scrolled', window.scrollY > 12)
      if (heroEl) {
        const heroBottom = heroEl.getBoundingClientRect().bottom
        const onHero = window.scrollY < 12 && heroBottom > 80
        header?.classList.toggle('on-hero', onHero)
      } else {
        header?.classList.remove('on-hero')
      }
    }

    window.addEventListener('scroll', onScroll, { passive: true })
    window.addEventListener('load', onScroll)
    onScroll()
  })()
</script>

<style>
  .header {
    position: fixed;
    top: clamp(10px, 2vw, 18px);
    left: 0;
    right: 0;
    z-index: 20;
    color: var(--color-text);
    --nav-underline: var(--gradient-sunset);
    --nav-outline: var(--color-border);
    pointer-events: auto;
  }

  .header__shell {
    pointer-events: auto;
    background: transparent;
    backdrop-filter: none;
    border: 1px solid transparent;
    transition: background 0.2s ease, box-shadow 0.2s ease, border-color 0.2s ease,
      backdrop-filter 0.2s ease;
    overflow: hidden;
    border-radius: 999px;
    margin: 0 auto;
    width: min(980px, calc(100% - 32px));
    box-shadow: none;
  }

  .header.is-scrolled {
    box-shadow: none;
  }

  .header.on-hero {
    color: #ffffff;
    --nav-underline: rgba(255, 255, 255, 0.95);
    --nav-outline: rgba(255, 255, 255, 0.35);
  }

  .header.on-hero .header__shell {
    background: transparent;
    border-color: transparent;
    box-shadow: none;
    backdrop-filter: none;
  }

  @media (min-width: 901px) {
    .header:not(.is-scrolled) {
      color: #ffffff;
      --nav-underline: rgba(255, 255, 255, 0.95);
      --nav-outline: rgba(255, 255, 255, 0.35);
    }

    .header:not(.is-scrolled) .logo__mark--day {
      display: none;
    }

    .header:not(.is-scrolled) .logo__mark--night {
      display: block;
    }
  }

  .header.is-scrolled .header__shell {
    background: var(--color-nav-bg-strong);
    box-shadow: var(--shadow-soft);
    border-color: var(--color-nav-border);
    backdrop-filter: blur(12px);
  }

  .header__inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1.5rem;
    padding: 1rem 0;
    transition: padding 0.2s ease;
    width: 100%;
    max-width: var(--container-max);
    margin: 0 auto;
    padding-left: 1.4rem;
    padding-right: 1.4rem;
  }

  .header__primary {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1.5rem;
    flex: 1 1 auto;
    min-width: 0;
  }

  .header.is-scrolled .header__inner {
    padding: 0.6rem 1.4rem;
  }

  .logo {
    flex: 0 0 auto;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    position: relative;
    z-index: 1;
  }

  .logo__mark {
    transition: transform 0.2s ease;
    display: block;
    width: auto;
    height: 44px;
  }

  .header.is-scrolled .logo__mark {
    transform: scale(0.92);
  }

  .logo__mark--night {
    display: none;
  }

  :global([data-theme='night']) .logo__mark--day {
    display: none;
  }

  :global([data-theme='night']) .logo__mark--night {
    display: block;
  }

  .header.on-hero .logo__mark--day {
    display: none;
  }

  .header.on-hero .logo__mark--night {
    display: block;
  }

  .header.on-hero .logo__mark {
    filter: drop-shadow(0 6px 18px rgba(0, 0, 0, 0.35));
  }

  .nav {
    display: flex;
    gap: 1.2rem;
    justify-content: flex-start;
    align-items: center;
    flex: 0 1 auto;
    min-width: 0;
  }

  .nav__link {
    font-weight: 500;
    color: currentColor;
    position: relative;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    white-space: nowrap;
  }

  .nav__link::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: -6px;
    width: 0;
    height: 2px;
    background: var(--nav-underline);
    transition: width 0.2s ease;
  }

  .nav__link:hover::after {
    width: 100%;
  }

  .nav__link:hover {
    text-decoration: none;
  }

  .social {
    display: flex;
    gap: 0.8rem;
    flex-wrap: wrap;
    justify-content: flex-end;
  }

  .social__link {
    width: auto;
    height: auto;
    border-radius: 0;
    border: none;
    padding: 0;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    color: currentColor;
    transition: color 0.2s ease, transform 0.2s ease;
  }

  .social__link i {
    font-size: 1.05rem;
  }

  .social__link:hover {
    color: var(--color-aux);
    transform: translateY(-1px);
  }

  .header__actions {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    gap: 0.7rem;
    flex: 0 1 auto;
    min-width: 0;
  }

  .theme-switch {
    display: inline-flex;
    align-items: center;
    cursor: pointer;
    position: relative;
  }

  .theme-switch__icon {
    position: absolute;
    left: 0;
    top: 0;
    width: 42px;
    height: 21px;
    pointer-events: none;
    color: #ffffff;
    z-index: 1;
  }

  .theme-switch__icon i {
    position: absolute;
    font-size: 0.68rem;
    transition: opacity 0.2s ease, transform 0.2s ease;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.35);
  }

  .theme-switch__icon .bi-moon-stars {
    left: 6px;
    top: 50%;
    transform: translateY(-50%);
  }

  .theme-switch__icon .bi-sun {
    right: 6px;
    top: 50%;
    transform: translateY(-50%);
  }

  .theme-switch__icon .bi-moon-stars {
    opacity: 0;
    transform: translateY(-50%) scale(0.8);
    color: #ffffff;
  }

  :global([data-theme='night']) .theme-switch__icon .bi-sun {
    opacity: 0;
    transform: translateY(-50%) scale(0.8);
  }

  :global([data-theme='night']) .theme-switch__icon .bi-moon-stars {
    opacity: 1;
    transform: translateY(-50%) scale(1);
    color: #ffffff;
  }

  :global([data-theme='night']) .theme-switch__track {
    background: #171c26;
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.12);
  }

  .theme-switch__input {
    position: absolute;
    opacity: 0;
    pointer-events: none;
  }

  .theme-switch__track {
    width: 42px;
    height: 21px;
    border-radius: 999px;
    background: #1b1f27;
    border: none;
    display: inline-flex;
    align-items: center;
    padding: 2px;
    transition: background 0.2s ease;
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.08);
    position: relative;
    z-index: 0;
  }

  .theme-switch__thumb {
    width: 17px;
    height: 17px;
    border-radius: 50%;
    background: #ffffff;
    transform: translateX(0);
    transition: transform 0.18s ease, background 0.2s ease;
    display: block;
    will-change: transform;
    box-shadow: 0 6px 14px rgba(0, 0, 0, 0.25);
    position: relative;
    z-index: 2;
  }

  .theme-switch__input:checked + .theme-switch__track .theme-switch__thumb {
    transform: translateX(21px);
  }

  :global([data-theme='night']) .theme-switch__thumb {
    transform: translateX(21px);
    background: #ffffff;
  }

  .menu-toggle {
    width: 34px;
    height: 34px;
    border-radius: 50%;
    border: 1px solid var(--nav-outline);
    background: var(--color-card);
    display: none;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    color: currentColor;
    transition: border-color 0.2s ease, color 0.2s ease, transform 0.2s ease;
  }

  .header.on-hero .theme-switch__track {
    background: #1b1f27;
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.25);
  }

  .menu-toggle i {
    font-size: 1.05rem;
  }

  .menu-toggle .bi-x-lg {
    display: none;
  }

  .header.menu-open .menu-toggle .bi-list {
    display: none;
  }

  .header.menu-open .menu-toggle .bi-x-lg {
    display: inline;
  }

  .mobile-panel {
    display: none;
    position: absolute;
    left: 0;
    right: 0;
    top: 100%;
    border-top: 1px solid var(--color-nav-border);
    background: var(--color-nav-bg-strong);
    padding: 1.5rem 0 2rem;
    box-shadow: var(--shadow-soft);
    border-radius: 0 0 24px 24px;
  }

  .mobile-panel__theme {
    display: flex;
    justify-content: center;
  }

  .mobile-panel__links {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: center;
  }

  .mobile-panel__link {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--color-text);
  }

  .mobile-panel__link-label {
    display: inline-flex;
    align-items: center;
    gap: 0.6rem;
  }

  .mobile-panel__link i {
    font-size: 1rem;
  }

  .mobile-panel__social {
    margin-top: 1rem;
    display: flex;
    gap: 0.8rem;
    justify-content: center;
  }

  .mobile-panel__social-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-text);
    font-weight: 600;
    font-size: 1rem;
  }

  .mobile-panel__social-link i {
    font-size: 1.1rem;
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  @media (max-width: 900px) {
    .header__inner {
      display: flex;
      align-items: center;
      justify-content: flex-end;
      gap: 0.6rem;
      padding: 0.5rem 0.7rem;
      width: auto;
      max-width: none;
    }

    .header__primary {
      display: none;
    }

    .nav {
      display: none;
    }

    .header__primary .social {
      display: none;
    }

    .header__actions .theme-switch {
      display: none;
    }

    .menu-toggle {
      display: inline-flex;
      width: 46px;
      height: 46px;
      border-radius: 999px;
      border: none;
      background: var(--color-card);
      box-shadow: var(--shadow-soft);
    }

    .menu-toggle i {
      font-size: 1.35rem;
    }

    .header {
      top: 8px;
    }

    .header__shell {
      width: auto;
      display: inline-flex;
      align-items: center;
      margin-left: auto;
      margin-right: 12px;
      border-radius: 999px;
      position: relative;
      z-index: 30;
    }

    .logo__mark {
      height: 36px;
    }

    .mobile-panel {
      display: flex;
      position: fixed;
      inset: 0;
      padding: calc(env(safe-area-inset-top) + 5.5rem) 1.5rem 2.5rem;
      background: var(--color-bg);
      border: none;
      border-radius: 0;
      box-shadow: none;
      flex-direction: column;
      gap: 2.2rem;
      opacity: 0;
      visibility: hidden;
      pointer-events: none;
      transform: translateY(-8px);
      transition: opacity 0.2s ease, transform 0.2s ease, visibility 0.2s ease;
      z-index: 20;
    }

    .header.menu-open .mobile-panel {
      opacity: 1;
      visibility: visible;
      pointer-events: auto;
      transform: translateY(0);
    }

    .mobile-panel__theme {
      justify-content: flex-start;
    }

    .mobile-panel__links {
      align-items: stretch;
      gap: 1.2rem;
    }

    .mobile-panel__theme {
      margin-top: 1.4rem;
    }

    .mobile-panel__link {
      width: 100%;
      display: flex;
      align-items: center;
      justify-content: flex-start;
      padding: 0.4rem 0;
      border-radius: 0;
      background: transparent;
      border: none;
      font-size: 1.5rem;
      font-weight: 600;
    }

    .mobile-panel__social {
      margin-top: 1.2rem;
      justify-content: flex-start;
      gap: 1.2rem;
      flex-wrap: wrap;
    }

    .mobile-panel__social-link {
      font-size: 1.05rem;
    }
  }
</style>
