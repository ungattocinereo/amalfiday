---
import { navigation, socialLinks, site } from '../data/site'

const headerSocials = socialLinks.filter((item) =>
  ['Instagram', 'Facebook', 'Twitter'].includes(item.label)
)
---
<header class="header">
  <div class="container header__inner">
    <nav class="nav">
      {navigation.map((item) => (
        <a class="nav__link" href={item.href}>
          {item.label}
        </a>
      ))}
    </nav>

    <a class="logo" href="/" aria-label={`${site.name} home`}>
      <img class="logo--dark" src="/brand/logo-dark.svg" alt="Amalfi.Day" />
      <img class="logo--light" src="/brand/logo-light.svg" alt="Amalfi.Day" />
    </a>

    <div class="header__actions">
      <div class="social">
        {headerSocials.map((item) => (
          <a class="social__link" href={item.href} target="_blank" rel="noreferrer">
            <span class="sr-only">{item.label}</span>
            {item.label === 'Instagram' && <i class="bi bi-instagram"></i>}
            {item.label === 'Facebook' && <i class="bi bi-facebook"></i>}
            {item.label === 'Twitter' && <i class="bi bi-twitter-x"></i>}
          </a>
        ))}
      </div>
      <button class="theme-toggle" type="button" aria-label="Toggle theme">
        <i class="bi bi-moon-stars"></i>
        <i class="bi bi-sun"></i>
      </button>
      <button class="menu-toggle" type="button" aria-label="Open menu" aria-expanded="false">
        <i class="bi bi-list"></i>
        <i class="bi bi-x-lg"></i>
      </button>
    </div>
  </div>
  <div class="mobile-panel">
    <div class="mobile-panel__links">
      {navigation.map((item) => (
        <a class="mobile-panel__link" href={item.href}>
          {item.label}
        </a>
      ))}
    </div>
    <div class="mobile-panel__social">
      {headerSocials.map((item) => (
        <a class="social__link" href={item.href} target="_blank" rel="noreferrer">
          <span class="sr-only">{item.label}</span>
          {item.label === 'Instagram' && <i class="bi bi-instagram"></i>}
          {item.label === 'Facebook' && <i class="bi bi-facebook"></i>}
          {item.label === 'Twitter' && <i class="bi bi-twitter-x"></i>}
        </a>
      ))}
    </div>
  </div>
</header>

<script is:inline>
  const root = document.documentElement
  const header = document.querySelector('.header')
  const themeToggle = document.querySelector('.theme-toggle')
  const menuToggle = document.querySelector('.menu-toggle')
  const hero = document.querySelector('.hero--orange')

  const setTheme = (value) => {
    root.dataset.theme = value
    try {
      localStorage.setItem('theme', value)
    } catch (error) {
      // ignore storage errors
    }
  }

  themeToggle?.addEventListener('click', () => {
    const next = root.dataset.theme === 'night' ? 'day' : 'night'
    setTheme(next)
  })

  menuToggle?.addEventListener('click', () => {
    const isOpen = header?.classList.toggle('menu-open')
    menuToggle?.setAttribute('aria-expanded', String(isOpen))
  })

  document.querySelectorAll('.mobile-panel__link').forEach((link) => {
    link.addEventListener('click', () => {
      header?.classList.remove('menu-open')
      menuToggle?.setAttribute('aria-expanded', 'false')
    })
  })

  const onScroll = () => {
    header?.classList.toggle('is-scrolled', window.scrollY > 12)
    if (hero) {
      const heroBottom = hero.getBoundingClientRect().bottom
      const onHero = window.scrollY < 12 && heroBottom > 80
      header?.classList.toggle('on-hero', onHero)
    } else {
      header?.classList.remove('on-hero')
    }
  }

  window.addEventListener('scroll', onScroll, { passive: true })
  window.addEventListener('load', onScroll)
  onScroll()
</script>

<style>
  .header {
    position: sticky;
    top: 0;
    z-index: 20;
    background: var(--color-nav-bg);
    backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--color-nav-border);
    transition: background 0.2s ease, box-shadow 0.2s ease, border-color 0.2s ease;
    overflow: visible;
    color: var(--color-text);
    --nav-underline: var(--gradient-sunset);
    --nav-outline: var(--color-border);
  }

  .header.is-scrolled {
    background: var(--color-nav-bg-strong);
    box-shadow: var(--shadow-soft);
  }

  .header.on-hero {
    color: #ffffff;
    background: rgba(255, 89, 0, 0.12);
    border-bottom-color: rgba(255, 255, 255, 0.15);
    --nav-underline: rgba(255, 255, 255, 0.95);
    --nav-outline: rgba(255, 255, 255, 0.35);
  }

  .header__inner {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    gap: 2rem;
    padding: 1.35rem 0;
    transition: padding 0.2s ease;
  }

  .header.is-scrolled .header__inner {
    padding: 0.6rem 0;
  }

  .logo {
    justify-self: center;
  }

  .logo img {
    height: 36px;
    transition: transform 0.2s ease;
  }

  .header.is-scrolled .logo img {
    transform: scale(0.92);
  }

  .logo--dark {
    display: block;
  }

  .logo--light {
    display: none;
  }

  .header.on-hero .logo--dark {
    display: none;
  }

  .header.on-hero .logo--light {
    display: block;
  }

  [data-theme='night'] .logo--dark {
    display: none;
  }

  [data-theme='night'] .logo--light {
    display: block;
  }

  .nav {
    display: flex;
    gap: 1.4rem;
    justify-content: flex-start;
  }

  .nav__link {
    font-weight: 500;
    color: currentColor;
    position: relative;
    text-decoration: none;
  }

  .nav__link::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: -6px;
    width: 0;
    height: 2px;
    background: var(--nav-underline);
    transition: width 0.2s ease;
  }

  .nav__link:hover::after {
    width: 100%;
  }

  .nav__link:hover {
    text-decoration: none;
  }

  .social {
    display: flex;
    gap: 0.8rem;
    flex-wrap: wrap;
    justify-content: flex-end;
  }

  .social__link {
    width: 34px;
    height: 34px;
    border-radius: 50%;
    border: 1px solid var(--nav-outline);
    display: inline-flex;
    align-items: center;
    justify-content: center;
    color: currentColor;
    transition: border-color 0.2s ease, color 0.2s ease, transform 0.2s ease;
  }

  .social__link i {
    font-size: 1rem;
  }

  .social__link:hover {
    border-color: var(--color-aux);
    color: var(--color-aux);
    transform: translateY(-1px);
  }

  .header__actions {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    gap: 0.8rem;
  }

  .theme-toggle {
    width: 38px;
    height: 38px;
    border-radius: 50%;
    border: 1px solid var(--nav-outline);
    background: radial-gradient(
      circle at top left,
      rgba(255, 195, 0, 0.2),
      rgba(255, 89, 0, 0.08)
    );
    display: inline-flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    color: currentColor;
    transition: border-color 0.2s ease, color 0.2s ease, transform 0.2s ease;
    box-shadow: inset 0 0 0 2px rgba(255, 89, 0, 0.08);
  }

  .theme-toggle i {
    font-size: 1rem;
  }

  .theme-toggle .bi-sun {
    display: none;
  }

  [data-theme='night'] .theme-toggle .bi-sun {
    display: inline;
  }

  [data-theme='night'] .theme-toggle .bi-moon-stars {
    display: none;
  }

  .theme-toggle:hover {
    border-color: var(--color-accent);
    color: var(--color-accent);
    transform: translateY(-1px);
  }

  .menu-toggle {
    width: 38px;
    height: 38px;
    border-radius: 50%;
    border: 1px solid var(--nav-outline);
    background: var(--color-card);
    display: none;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    color: currentColor;
    transition: border-color 0.2s ease, color 0.2s ease, transform 0.2s ease;
  }

  .menu-toggle i {
    font-size: 1.05rem;
  }

  .menu-toggle .bi-x-lg {
    display: none;
  }

  .header.menu-open .menu-toggle .bi-list {
    display: none;
  }

  .header.menu-open .menu-toggle .bi-x-lg {
    display: inline;
  }

  .mobile-panel {
    display: none;
    position: absolute;
    left: 0;
    right: 0;
    top: 100%;
    border-top: 1px solid var(--color-nav-border);
    background: var(--color-nav-bg-strong);
    padding: 1.5rem 0 2rem;
    box-shadow: var(--shadow-soft);
  }

  .mobile-panel__links {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: center;
  }

  .mobile-panel__link {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--color-text);
  }

  .mobile-panel__social {
    margin-top: 1rem;
    display: flex;
    gap: 0.8rem;
    justify-content: center;
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  @media (max-width: 900px) {
    .header__inner {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .nav {
      display: none;
    }

    .logo {
      order: -1;
    }

    .social {
      display: none;
    }

    .menu-toggle {
      display: inline-flex;
    }

    .header.menu-open .mobile-panel {
      display: block;
    }
  }
</style>
