---
import '../styles/global.css'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import { site } from '../data/site'

const { title = site.name, description = site.description } = Astro.props
---
<!DOCTYPE html>
<html lang="ru">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta name="theme-color" content="#FF5900" />
    <meta name="theme-color" content="#FF5900" media="(prefers-color-scheme: dark)" />
    <meta name="theme-color" content="#FF5900" media="(prefers-color-scheme: light)" />
    <meta name="msapplication-TileColor" content="#FF5900" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <script is:inline>
      try {
        const stored = localStorage.getItem('theme')
        const prefersDark =
          window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches
        document.documentElement.dataset.theme = stored || (prefersDark ? 'night' : 'day')
      } catch (error) {
        document.documentElement.dataset.theme = 'day'
      }
    </script>
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
