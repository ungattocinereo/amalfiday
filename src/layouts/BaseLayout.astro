---
import '../styles/global.css'
import Header from '../components/Header.astro'
import Prefooter from '../components/Prefooter.astro'
import Footer from '../components/Footer.astro'
import { site } from '../data/site'

const {
  title = site.name,
  description = site.description,
  image = site.defaultImage,
  imageAlt = title,
  url,
  type = 'website',
  twitterCard = 'summary_large_image',
} = Astro.props

const resolveImage = (value) => {
  if (!value) return null
  if (typeof value === 'string') return value
  if (typeof value === 'object' && 'src' in value) return value.src
  return String(value)
}

const toAbsoluteUrl = (value) => {
  if (!value) return null
  try {
    return new URL(value, site.url).toString()
  } catch {
    return value
  }
}

const rawImage = resolveImage(image) ?? site.defaultImage
const ogImage = rawImage ? toAbsoluteUrl(rawImage) : null
const pageUrl = url
  ? toAbsoluteUrl(url)
  : Astro.url
    ? new URL(Astro.url.pathname, site.url).toString()
    : site.url
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-C2E8E3XBBJ"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-C2E8E3XBBJ');
    </script>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="preload"
      as="style"
      href="https://fonts.googleapis.com/css2?family=Libre+Baskerville:ital,wght@0,400;0,700;1,400&family=Roboto:ital,wght@0,300;0,400;0,500;0,700;1,400&family=IBM+Plex+Mono:ital,wght@0,400;0,500;1,400&display=swap"
      onload="this.onload=null;this.rel='stylesheet'"
    />
    <noscript>
      <link
        rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Libre+Baskerville:ital,wght@0,400;0,700;1,400&family=Roboto:ital,wght@0,300;0,400;0,500;0,700;1,400&family=IBM+Plex+Mono:ital,wght@0,400;0,500;1,400&display=swap"
      />
    </noscript>
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={pageUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content={type} />
    <meta property="og:site_name" content={site.name} />
    <meta property="og:url" content={pageUrl} />
    {ogImage && <meta property="og:image" content={ogImage} />}
    {ogImage && <meta property="og:image:alt" content={imageAlt} />}
    <meta name="twitter:card" content={twitterCard} />
    {site.twitterHandle && <meta name="twitter:site" content={site.twitterHandle} />}
    {site.twitterHandle && <meta name="twitter:creator" content={site.twitterHandle} />}
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    {ogImage && <meta name="twitter:image" content={ogImage} />}
    {ogImage && <meta name="twitter:image:alt" content={imageAlt} />}
    <link rel="icon" href="/favicon.ico" sizes="any" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="48x48" href="/favicon-48x48.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="theme-color" content="#FF5900" />
    <meta name="theme-color" content="#FF5900" media="(prefers-color-scheme: dark)" />
    <meta name="theme-color" content="#FF5900" media="(prefers-color-scheme: light)" />
    <meta name="msapplication-TileColor" content="#FF5900" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <script is:inline>
      try {
        const stored = localStorage.getItem('theme')
        const prefersDark =
          window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches
        document.documentElement.dataset.theme = stored || (prefersDark ? 'night' : 'day')
      } catch (error) {
        document.documentElement.dataset.theme = 'day'
      }
    </script>
  </head>
  <body>
    <div class="top-scrim" id="topScrim"></div>
    <Header />
    <main>
      <slot />
    </main>
    <Prefooter />
    <Footer />
  </body>
</html>
