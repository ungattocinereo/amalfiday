<!DOCTYPE html>
<html lang="{{@site.locale}}">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{meta_title}}</title>
    <link rel="stylesheet" href="{{asset "built/screen.css"}}">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Libre+Baskerville:ital,wght@0,400;0,700;1,400&family=Roboto:ital,wght@0,300;0,400;0,500;0,700;1,400&family=IBM+Plex+Mono:ital,wght@0,400;0,500;1,400&display=swap">
    <link rel="stylesheet" href="{{asset "built/bootstrap-icons.css"}}">
    <script>
        try {
            const stored = localStorage.getItem('theme')
            const prefersDark = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches
            document.documentElement.dataset.theme = stored || (prefersDark ? 'night' : 'day')
        } catch (error) {
            document.documentElement.dataset.theme = 'day'
        }
    </script>
    <style>
        :root {
            --color-accent: #ff5900;
            --color-accent-2: #ffc300;
            --color-aux: #0162ff;
            --color-aux-2: #009cff;
            --color-bg: #ffffff;
            --color-surface: #f0f2f6;
            --color-card: #ffffff;
            --color-border: rgba(26, 26, 26, 0.12);
            --color-text: #1a1a1a;
            --color-text-muted: #666666;
            --color-nav-bg-strong: rgba(255, 255, 255, 0.95);
            --color-nav-border: rgba(240, 242, 246, 0.9);
            --gradient-sunset: linear-gradient(135deg, #ff5900 0%, #ffc300 100%);
            --shadow-soft: 0 10px 30px rgba(0, 0, 0, 0.08);
            --container-max: 1200px;
            --font-body: "Roboto", "Helvetica Neue", Arial, sans-serif;
            --font-mono: "IBM Plex Mono", "Menlo", "Courier New", monospace;
            --font-display: "Libre Baskerville", "Times New Roman", serif;
        }

        [data-theme='night'] {
            --color-bg: #0f1115;
            --color-surface: #171a20;
            --color-card: #14171b;
            --color-border: rgba(255, 255, 255, 0.08);
            --color-text: #f5f5f5;
            --color-text-muted: #b3b7c0;
            --color-nav-bg-strong: rgba(15, 17, 21, 0.96);
            --color-nav-border: rgba(255, 255, 255, 0.06);
            --shadow-soft: 0 10px 30px rgba(0, 0, 0, 0.45);

            --color-primary-text: #f5f5f5;
            --color-secondary-text: #b3b7c0;
            --color-white: #0f1115;
            --color-lighter-gray: #14171b;
            --color-light-gray: #1f232b;
            --color-mid-gray: #2b313b;
            --color-dark-gray: #d7d9dd;
            --color-darker-gray: #f5f5f5;
            --color-black: #ffffff;
        }

        html {
            color-scheme: light;
        }

        [data-theme='night'] {
            color-scheme: dark;
        }

        .header {
            position: fixed;
            top: clamp(10px, 2vw, 18px);
            left: 0;
            right: 0;
            z-index: 200;
            color: var(--color-text);
            --nav-underline: var(--gradient-sunset);
            --nav-outline: var(--color-border);
            font-family: var(--font-body);
            pointer-events: auto;
        }

        .container {
            max-width: var(--container-max);
            margin: 0 auto;
            padding: 0 24px;
        }

        .header__shell {
            pointer-events: auto;
            background: transparent;
            backdrop-filter: none;
            border: 1px solid transparent;
            transition: background 0.2s ease, box-shadow 0.2s ease, border-color 0.2s ease,
                backdrop-filter 0.2s ease;
            overflow: hidden;
            border-radius: 999px;
            margin: 0 auto;
            width: min(980px, calc(100% - 32px));
            box-shadow: none;
        }

        .header.on-hero {
            color: #ffffff;
            --nav-underline: rgba(255, 255, 255, 0.95);
            --nav-outline: rgba(255, 255, 255, 0.35);
        }

        .header.on-hero .header__shell {
            background: transparent;
            border-color: transparent;
            box-shadow: none;
            backdrop-filter: none;
        }

        @media (min-width: 901px) {
            .header.has-hero:not(.is-scrolled) {
                color: #ffffff;
                --nav-underline: rgba(255, 255, 255, 0.95);
                --nav-outline: rgba(255, 255, 255, 0.35);
            }

            .header.has-hero:not(.is-scrolled) .logo__mark--day {
                display: none;
            }

            .header.has-hero:not(.is-scrolled) .logo__mark--night {
                display: block;
            }
        }

        .header.is-scrolled .header__shell {
            background: var(--color-nav-bg-strong);
            box-shadow: var(--shadow-soft);
            border-color: var(--color-nav-border);
            backdrop-filter: blur(12px);
        }

        .header__inner {
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 1.5rem;
            padding: 1rem 0;
            transition: padding 0.2s ease;
            width: 100%;
            max-width: var(--container-max);
            margin: 0 auto;
            padding-left: 1.4rem;
            padding-right: 1.4rem;
        }

        .header__primary {
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 1.5rem;
            flex: 1 1 auto;
            min-width: 0;
        }

        .header.is-scrolled .header__inner {
            padding: 0.6rem 1.4rem;
        }

        .logo {
            flex: 0 0 auto;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            position: relative;
            z-index: 1;
        }

        .logo__mark {
            transition: transform 0.2s ease;
            display: block;
            width: auto;
            height: 44px;
        }

        .header.is-scrolled .logo__mark {
            transform: scale(0.92);
        }

        .logo__mark--night {
            display: none;
        }

        [data-theme='night'] .logo__mark--day {
            display: none;
        }

        [data-theme='night'] .logo__mark--night {
            display: block;
        }

        .header.on-hero .logo__mark--day {
            display: none;
        }

        .header.on-hero .logo__mark--night {
            display: block;
        }

        .header.on-hero .logo__mark {
            filter: drop-shadow(0 6px 18px rgba(0, 0, 0, 0.35));
        }

        .header .nav {
            display: flex;
            gap: 1.2rem;
            justify-content: flex-start;
            align-items: center;
            flex: 0 1 auto;
            min-width: 0;
            margin: 0;
            padding: 0;
            list-style: none;
        }

        .header .nav__link {
            font-weight: 500;
            color: currentColor;
            position: relative;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            white-space: nowrap;
        }

        .header .nav__link::after {
            content: '';
            position: absolute;
            left: 0;
            bottom: -6px;
            width: 0;
            height: 2px;
            background: var(--nav-underline);
            transition: width 0.2s ease;
        }

        .header .nav__link:hover::after {
            width: 100%;
        }

        .header .nav__link:hover {
            text-decoration: none;
        }

        .social {
            display: flex;
            gap: 0.8rem;
            flex-wrap: wrap;
            justify-content: flex-end;
        }

        .social__link {
            width: auto;
            height: auto;
            border-radius: 0;
            border: none;
            padding: 0;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            color: currentColor;
            transition: color 0.2s ease, transform 0.2s ease;
        }

        .social__link i {
            font-size: 16.8px;
        }

        .social__link:hover {
            color: var(--color-aux);
            transform: translateY(-1px);
        }

        .header__actions {
            display: flex;
            align-items: center;
            justify-content: flex-end;
            gap: 0.7rem;
            flex: 0 1 auto;
            min-width: 0;
        }

        .theme-switch {
            display: inline-flex;
            align-items: center;
            cursor: pointer;
            position: relative;
        }

        .theme-switch__icon {
            position: absolute;
            left: 0;
            top: 0;
            width: 42px;
            height: 21px;
            pointer-events: none;
            color: #ffffff;
            z-index: 1;
        }

        .theme-switch__icon i {
            position: absolute;
            font-size: 10.9px;
            transition: opacity 0.2s ease, transform 0.2s ease;
            text-shadow: 0 1px 2px rgba(0, 0, 0, 0.35);
        }

        .theme-switch__icon .bi-moon-stars {
            left: 6px;
            top: 50%;
            transform: translateY(-50%);
        }

        .theme-switch__icon .bi-sun {
            right: 6px;
            top: 50%;
            transform: translateY(-50%);
        }

        .theme-switch__icon .bi-moon-stars {
            opacity: 0;
            transform: translateY(-50%) scale(0.8);
            color: #ffffff;
        }

        [data-theme='night'] .theme-switch__icon .bi-sun {
            opacity: 0;
            transform: translateY(-50%) scale(0.8);
        }

        [data-theme='night'] .theme-switch__icon .bi-moon-stars {
            opacity: 1;
            transform: translateY(-50%) scale(1);
            color: #ffffff;
        }

        [data-theme='night'] .theme-switch__track {
            background: #171c26;
            box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.12);
        }

        .theme-switch__input {
            position: absolute;
            opacity: 0;
            pointer-events: none;
        }

        .theme-switch__track {
            width: 42px;
            height: 21px;
            border-radius: 999px;
            background: #1b1f27;
            border: none;
            display: inline-flex;
            align-items: center;
            padding: 2px;
            transition: background 0.2s ease;
            box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.08);
            position: relative;
            z-index: 0;
        }

        .theme-switch__thumb {
            width: 17px;
            height: 17px;
            border-radius: 50%;
            background: #ffffff;
            transform: translateX(0);
            transition: transform 0.18s ease, background 0.2s ease;
            display: block;
            will-change: transform;
            box-shadow: 0 6px 14px rgba(0, 0, 0, 0.25);
            position: relative;
            z-index: 2;
        }

        .theme-switch__input:checked + .theme-switch__track .theme-switch__thumb {
            transform: translateX(21px);
        }

        [data-theme='night'] .theme-switch__thumb {
            transform: translateX(21px);
            background: #ffffff;
        }

        .menu-toggle {
            width: 34px;
            height: 34px;
            border-radius: 50%;
            border: 1px solid var(--nav-outline);
            background: var(--color-card);
            display: none;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            color: currentColor;
            transition: border-color 0.2s ease, color 0.2s ease, transform 0.2s ease;
        }

        .header.on-hero .theme-switch__track {
            background: #1b1f27;
            box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.25);
        }

        .menu-toggle i {
            font-size: 16.8px;
        }

        .menu-toggle .bi-x-lg {
            display: none;
        }

        .header.menu-open .menu-toggle .bi-list {
            display: none;
        }

        .header.menu-open .menu-toggle .bi-x-lg {
            display: inline;
        }

        .mobile-panel {
            display: none;
            position: absolute;
            left: 0;
            right: 0;
            top: 100%;
            border-top: 1px solid var(--color-nav-border);
            background: var(--color-nav-bg-strong);
            padding: 1.5rem 0 2rem;
            box-shadow: var(--shadow-soft);
            border-radius: 0 0 24px 24px;
        }

        .mobile-panel__theme {
            display: flex;
            justify-content: center;
        }

        .mobile-panel__links {
            display: flex;
            flex-direction: column;
            gap: 1rem;
            align-items: center;
        }

        .mobile-panel__link {
            font-size: 1.1rem;
            font-weight: 600;
            color: var(--color-text);
        }

        .mobile-panel__link-label {
            display: inline-flex;
            align-items: center;
            gap: 0.6rem;
        }

        .mobile-panel__link i {
            font-size: 16px;
        }

        .mobile-panel__social {
            margin-top: 1rem;
            display: flex;
            gap: 0.8rem;
            justify-content: center;
        }

        .mobile-panel__social-link {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            color: var(--color-text);
            font-weight: 600;
            font-size: 1rem;
        }

        .mobile-panel__social-link i {
            font-size: 17.6px;
        }

        .sr-only {
            position: absolute;
            width: 1px;
            height: 1px;
            padding: 0;
            margin: -1px;
            overflow: hidden;
            clip: rect(0, 0, 0, 0);
            white-space: nowrap;
            border: 0;
        }

        @media (max-width: 900px) {
            .header__inner {
                display: flex;
                align-items: center;
                justify-content: flex-end;
                gap: 0.6rem;
                padding: 0.5rem 0.7rem;
                width: auto;
                max-width: none;
            }

            .header__primary {
                display: none;
            }

            .header .nav {
                display: none;
            }

            .header__primary .social {
                display: none;
            }

            .header__actions .theme-switch {
                display: none;
            }

            .menu-toggle {
                display: inline-flex;
                width: 46px;
                height: 46px;
                border-radius: 999px;
                border: none;
                background: var(--color-card);
                box-shadow: var(--shadow-soft);
            }

            .menu-toggle i {
                font-size: 21.6px;
            }

            .header {
                top: 8px;
            }

            .header__shell {
                width: auto;
                display: inline-flex;
                align-items: center;
                margin-left: auto;
                margin-right: 12px;
                border-radius: 999px;
                position: relative;
                z-index: 30;
            }

            .logo__mark {
                height: 36px;
            }

            .mobile-panel {
                display: flex;
                position: fixed;
                inset: 0;
                padding: calc(env(safe-area-inset-top) + 5.5rem) 1.5rem 2.5rem;
                background: var(--color-bg);
                border: none;
                border-radius: 0;
                box-shadow: none;
                flex-direction: column;
                gap: 2.2rem;
                opacity: 0;
                visibility: hidden;
                pointer-events: none;
                transform: translateY(-8px);
                transition: opacity 0.2s ease, transform 0.2s ease, visibility 0.2s ease;
                z-index: 20;
            }

            .header.menu-open .mobile-panel {
                opacity: 1;
                visibility: visible;
                pointer-events: auto;
                transform: translateY(0);
            }

            .mobile-panel__theme {
                justify-content: flex-start;
            }

            .mobile-panel__links {
                align-items: stretch;
                gap: 1.2rem;
            }

            .mobile-panel__theme {
                margin-top: 1.4rem;
            }

            .mobile-panel__link {
                width: 100%;
                display: flex;
                align-items: center;
                justify-content: flex-start;
                padding: 0.4rem 0;
                border-radius: 0;
                background: transparent;
                border: none;
                font-size: 1.5rem;
                font-weight: 600;
            }

            .mobile-panel__social {
                margin-top: 1.2rem;
                justify-content: flex-start;
                gap: 1.2rem;
                flex-wrap: wrap;
            }

            .mobile-panel__social-link {
                font-size: 1.05rem;
            }
        }

        .footer {
            padding: 64px 0 0;
            background: var(--color-bg);
            border-top: 1px solid var(--color-border);
            font-family: var(--font-body);
            font-size: 16px;
        }

        .footer__inner {
            display: grid;
            gap: 40px;
            grid-template-columns: 1.2fr repeat(4, 1fr);
            align-items: start;
        }

        .footer__logo {
            height: 56px;
            width: auto;
            margin-bottom: 1.5rem;
            color: var(--color-text);
        }

        [data-theme='night'] .footer__logo {
            color: #ffffff;
        }

        .footer__social {
            display: flex;
            gap: 0.8rem;
        }

        .footer__social-link {
            width: 44px;
            height: 44px;
            border-radius: 50%;
            border: 1px solid var(--color-border);
            display: inline-flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            color: var(--color-text);
        }

        .footer__column {
            display: flex;
            flex-direction: column;
            gap: 12px;
        }

        .footer__link {
            display: flex;
            gap: 10px;
            align-items: center;
            color: var(--color-text);
            font-size: 15.2px;
            font-weight: 600;
            border-bottom: 1px solid var(--color-border);
            padding-bottom: 6px;
        }

        .footer__icon {
            font-size: 13.6px;
            color: var(--color-text-muted);
        }

        .footer__bottom {
            margin-top: 48px;
            padding: 24px 0;
            border-top: 1px solid var(--color-border);
            color: var(--color-text-muted);
            font-size: 13.6px;
        }

        .footer__bottom-inner {
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 16px;
            flex-wrap: wrap;
        }

        .footer__meta {
            display: flex;
            align-items: center;
            gap: 11px;
            margin-left: auto;
            text-align: right;
        }

        .footer__divider {
            color: var(--color-text-muted);
        }

        .footer__credit {
            font-family: var(--font-mono);
            letter-spacing: 0.02em;
        }

        .footer__policy,
        .footer__credit-link {
            text-decoration: underline;
            text-underline-offset: 3px;
        }

        .footer__bottom a {
            color: inherit;
        }

        @media (max-width: 1100px) {
            .footer__inner {
                grid-template-columns: 1fr 1fr;
            }
        }

        @media (max-width: 720px) {
            .footer__bottom-inner {
                flex-direction: column;
                align-items: flex-start;
                gap: 6px;
            }

            .footer__meta {
                margin-left: 0;
                flex-direction: column;
                align-items: flex-start;
                text-align: left;
                gap: 6px;
            }

            .footer__divider {
                display: none;
            }
        }

        @media (max-width: 640px) {
            .footer__inner {
                grid-template-columns: 1fr;
            }
        }

        .button {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 14px 22px;
            border-radius: 999px;
            background: var(--color-accent);
            color: #ffffff;
            font-weight: 600;
            border: none;
            cursor: pointer;
            transition: transform 0.2s ease, box-shadow 0.2s ease, background 0.2s ease;
            box-shadow: var(--shadow-soft);
        }

        .button:hover {
            transform: translateY(-2px);
            box-shadow: 0 18px 50px rgba(0, 0, 0, 0.12);
            background: #e94f00;
        }

        .button.secondary {
            background: var(--gradient-azure, linear-gradient(135deg, #009cff 0%, #0162ff 100%));
        }

        .prefooter {
            padding: 64px 0 80px;
            background: var(--color-bg);
        }

        .prefooter__inner {
            display: grid;
            grid-template-columns: 1.2fr 0.8fr;
            gap: 48px;
            align-items: start;
        }

        .prefooter__copy h2 {
            font-family: var(--font-display);
            letter-spacing: -0.02em;
            margin: 0 0 10px;
            font-size: 28px;
        }

        .prefooter__copy p {
            margin: 0 0 16px;
            line-height: 1.7;
            color: var(--color-text-muted);
            font-size: 16px;
        }

        .prefooter__line {
            height: 3px;
            width: 120px;
            background: var(--gradient-sunset);
            border-radius: 999px;
            margin: 16px 0 24px;
        }

        .prefooter__actions {
            display: flex;
            gap: 16px;
            align-items: center;
            flex-wrap: wrap;
        }

        .prefooter__link {
            font-weight: 600;
            color: var(--color-text);
            display: inline-flex;
            align-items: center;
            gap: 6px;
            font-size: 15.2px;
        }

        .prefooter__media {
            display: flex;
            flex-direction: column;
            gap: 24px;
        }

        .prefooter__stack {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 13px;
        }

        .prefooter__photo {
            height: 120px;
            border-radius: 12px;
            width: 100%;
            object-fit: cover;
            display: block;
        }

        .prefooter__newsletter {
            display: flex;
            gap: 16px;
            align-items: center;
            padding: 16px 19px;
            border-radius: 16px;
            background: var(--color-surface);
            justify-content: space-between;
        }

        .prefooter__newsletter span {
            font-weight: 600;
            color: var(--color-text);
        }

        @media (max-width: 1000px) {
            .prefooter__inner {
                grid-template-columns: 1fr;
            }
        }

        @media (max-width: 640px) {
            .prefooter__actions {
                align-items: flex-start;
            }
        }

        .gh-main {
            margin-top: 15px;
        }
    </style>

    {{ghost_head}}
</head>

<body class="{{body_class}}{{{block "body_class"}}} is-head-{{#match @custom.navigation_layout "Logo on the left"}}left-logo{{else match @custom.navigation_layout "Logo in the middle"}}middle-logo{{else}}stacked{{/match}}{{#match @custom.title_font "=" "Elegant serif"}} has-serif-title{{/match}}{{#match @custom.body_font "=" "Elegant serif"}} has-serif-body{{/match}}{{#is "tag"}}{{#if tag.feature_image}} is-head-transparent{{/if}}{{/is}}{{#match @custom.header_style "Accent color"}} is-head-brand{{/match}}{{#match @custom.header_style "Dark"}} is-head-dark{{/match}}">
