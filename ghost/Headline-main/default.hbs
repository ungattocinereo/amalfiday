<script>
    (() => {
        const root = document.documentElement
        const header = document.querySelector('.header')
        if (!header) return
        const themeToggles = Array.from(document.querySelectorAll('.theme-switch__input'))
        const menuToggle = document.querySelector('.menu-toggle')
        const mobilePanel = document.querySelector('.mobile-panel')
        const heroEl = document.querySelector('.hero--orange, .hero--dark')

        if (heroEl) {
            header.classList.add('has-hero')
        }

        const getStoredTheme = () => {
            try {
                return localStorage.getItem('theme')
            } catch (error) {
                return null
            }
        }

        const getSystemTheme = () => {
            if (window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches) {
                return 'night'
            }
            return 'day'
        }

        const syncSwitch = (value) => {
            themeToggles.forEach((toggle) => {
                toggle.checked = value === 'night'
            })
        }

        const setTheme = (value, { persist = false } = {}) => {
            root.dataset.theme = value
            if (persist) {
                try {
                    localStorage.setItem('theme', value)
                } catch (error) {
                    // ignore storage errors
                }
            }
            syncSwitch(value)
        }

        const storedTheme = getStoredTheme()
        const hasStoredTheme = storedTheme === 'day' || storedTheme === 'night'
        const initialTheme = hasStoredTheme ? storedTheme : root.dataset.theme || getSystemTheme()
        let allowSystemSync = !hasStoredTheme

        setTheme(initialTheme, { persist: hasStoredTheme })

        if (window.matchMedia) {
            const media = window.matchMedia('(prefers-color-scheme: dark)')
            const onSystemChange = (event) => {
                if (!allowSystemSync) return
                setTheme(event.matches ? 'night' : 'day')
            }
            if (media.addEventListener) {
                media.addEventListener('change', onSystemChange)
            } else if (media.addListener) {
                media.addListener(onSystemChange)
            }
        }

        themeToggles.forEach((toggle) => {
            toggle.addEventListener('change', () => {
                const next = toggle.checked ? 'night' : 'day'
                allowSystemSync = false
                setTheme(next, { persist: true })
            })
        })

        menuToggle?.addEventListener('click', () => {
            const isOpen = header?.classList.toggle('menu-open')
            menuToggle?.setAttribute('aria-expanded', String(isOpen))
            mobilePanel?.setAttribute('aria-hidden', String(!isOpen))
            document.body.style.overflow = isOpen ? 'hidden' : ''
        })

        document.querySelectorAll('.mobile-panel__link').forEach((link) => {
            link.addEventListener('click', () => {
                header?.classList.remove('menu-open')
                menuToggle?.setAttribute('aria-expanded', 'false')
                mobilePanel?.setAttribute('aria-hidden', 'true')
                document.body.style.overflow = ''
            })
        })

        const onScroll = () => {
            header?.classList.toggle('is-scrolled', window.scrollY > 12)
            if (heroEl) {
                const heroBottom = heroEl.getBoundingClientRect().bottom
                const onHero = window.scrollY < 12 && heroBottom > 80
                header?.classList.toggle('on-hero', onHero)
            } else {
                header?.classList.remove('on-hero')
            }
        }

        window.addEventListener('scroll', onScroll, { passive: true })
        window.addEventListener('load', onScroll)
        onScroll()
    })()

    const bookmarkLink = document.querySelector('[data-bookmark="true"]')
    bookmarkLink?.addEventListener('click', (event) => {
        event.preventDefault()
        const url = window.location.origin
        const title = document.title

        if (window.sidebar && window.sidebar.addPanel) {
            window.sidebar.addPanel(title, url, '')
            return
        }

        if (window.external && 'AddFavorite' in window.external) {
            window.external.AddFavorite(url, title)
            return
        }

        alert('Press Ctrl+D (Windows) or ⌘+D (Mac) to bookmark this page.')
    })
</script>

